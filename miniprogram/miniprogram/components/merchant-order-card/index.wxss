.order-card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.order-no {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-type {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.order-items-list {
  margin-bottom: 24rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.dish-name {
  flex: 1;
}

.dish-quantity {
  width: 80rpx;
  text-align: center;
  color: #666;
}

.dish-price {
  width: 120rpx;
  text-align: right;
  font-weight: bold;
}

.order-notes {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  background: #fffbe6;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.notes-text {
  font-size: 26rpx;
  color: #e6a23c;
  flex: 1;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.order-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
  font-weight: normal;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 24rpx;
}
