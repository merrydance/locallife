.uploader-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: #4A89FF; /* Vibrant Blue from reference */
  border-radius: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

/* Background ID Card Graphic */
.uploader-container::before {
  content: '';
  position: absolute;
  width: 60%;
  height: 60%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  z-index: 1;
}

.uploader-container::after {
  content: '';
  position: absolute;
  width: 40%;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.15);
  top: 35%;
  left: 25%;
  box-shadow: 0 16rpx 0 rgba(255, 255, 255, 0.15), 
              0 32rpx 0 rgba(255, 255, 255, 0.15),
              0 48rpx 0 rgba(255, 255, 255, 0.15);
  z-index: 1;
}

/* Has value - show image clearly */
.uploader-container.has-value {
  background-color: #f5f5f5;
}

/* Corner Markers - White like in reference */
.corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-color: #FFFFFF; 
  border-style: solid;
  border-width: 0;
  z-index: 5;
  pointer-events: none;
}

.corner-tl {
  top: 40rpx; left: 60rpx;
  border-top-width: 6rpx;
  border-left-width: 6rpx;
}
.corner-tr {
  top: 40rpx; right: 60rpx;
  border-top-width: 6rpx;
  border-right-width: 6rpx;
}
.corner-bl {
  bottom: 40rpx; left: 60rpx;
  border-bottom-width: 6rpx;
  border-left-width: 6rpx;
}
.corner-br {
  bottom: 40rpx; right: 60rpx;
  border-bottom-width: 6rpx;
  border-right-width: 6rpx;
}

/* Content */
.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.remove-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.placeholder-state {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.placeholder-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #FFFFFF;
}
