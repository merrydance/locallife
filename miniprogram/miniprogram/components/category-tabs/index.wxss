.category-tabs {
  white-space: nowrap;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 100%;
  position: relative;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.tab-item.active {
  color: #0052D9;
  font-weight: 600;
  font-size: 30rpx;
}

.active-line {
  position: absolute;
  bottom: 12rpx;
  width: 40rpx;
  height: 6rpx;
  background: #0052D9;
  border-radius: 3rpx;
}
