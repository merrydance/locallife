/* 餐厅卡片 - 统一设计规范 */

.restaurant-card {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.restaurant-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 图片 - 与其他卡片统一 180x180 */
.restaurant-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.restaurant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.row-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.row-2, .row-3 {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

/* 标题 */
.restaurant-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cuisine, .distance {
  font-size: 24rpx;
  color: #666;
}

/* 价格 */
.avg-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B58;
}

.separator {
  color: #ddd;
  margin: 0 4rpx;
}

.rooms {
  font-size: 22rpx;
  color: #00897B;
  font-weight: 500;
}
