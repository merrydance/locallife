.search-filter {
  background: #fff;
  padding: 24rpx;
}

.search-bar {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #F5F5F5;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.filter-btn {
  padding: 16rpx 24rpx;
  background: #0052D9;
  color: #fff;
  border-radius: 24rpx;
  font-size: 28rpx;
}

.filter-panel {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
}

.filter-item {
  margin-bottom: 32rpx;
}

.filter-item:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.picker-value {
  padding: 16rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.meal-period-options {
  display: flex;
  gap: 16rpx;
}

.period-option {
  flex: 1;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.period-option.active {
  color: #0052D9;
  border-color: #0052D9;
  background: #E6F0FF;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.reset-btn,
.apply-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.reset-btn {
  background: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}

.apply-btn {
  background: #0052D9;
  color: #fff;
}
