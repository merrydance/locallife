.review-card {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #eee;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.review-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #eee;
}

.reply {
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.reply-label {
  color: #666;
  font-weight: bold;
}

.reply-content {
  color: #333;
}

.reply-date {
    color: #999;
    font-size: 22rpx;
    margin-left: 8rpx;
}
