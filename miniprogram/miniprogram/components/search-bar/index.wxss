.header-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #fff;
}

.location {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  max-width: 200rpx;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow {
  font-size: 24rpx;
  color: #333;
  margin-left: 4rpx;
}

.search-box {
  flex: 1;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.placeholder {
  font-size: 26rpx;
  color: #999;
  margin-left: 12rpx;
}
