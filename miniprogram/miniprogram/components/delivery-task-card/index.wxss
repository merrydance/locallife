.task-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.header-right {
  display: flex;
  align-items: center;
}

.delivery-fee {
  font-size: 32rpx;
  font-weight: bold;
  color: #fa8c16;
  margin-left: 16rpx;
}

.card-body {
  margin-bottom: 24rpx;
}

.address-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.address-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.address-info {
  flex: 1;
}

.address-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 4rpx;
}

.label {
  font-size: 24rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  background: #f0f0f0;
  color: #666;
}

.address {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.detail {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
