/* 骑手注册页面 - 特殊样式 */
/* 大部分样式已使用common.wxss中的通用类 */

/* t-cell组件内的输入框样式 */
.input,
.picker {
  text-align: right;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  max-width: 420rpx;
}

/* 地址显示文本 */
.address-display {
  text-align: right;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

/* picker选择器文本(支持换行) */
.picker-text {
  text-align: right;
  font-size: 28rpx;
  color: #333;
  max-width: 420rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
}

/* placeholder颜色 */
.placeholder {
  color: #999;
}

/* Onboarding Guide Styles */
.onboarding-guide {
  margin-top: 48rpx;
  padding: 0 16rpx;
  margin-bottom: 24rpx;
}

.guide-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.guide-title text {
  font-size: 26rpx;
  color: #999;
  margin: 0 24rpx;
}

.guide-line {
  flex: 1;
  height: 2rpx;
  background-color: #EEEEEE;
}

.guide-list {
  display: flex;
  justify-content: space-between;
}

.guide-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;
}

.guide-img-box {
  width: 100%;
  height: 100rpx;
  background-color: #F8F9FB;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid #E8E8E8;
}

.guide-img-box::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70%;
  height: 60%;
  background-color: #DDE2EB;
  border-radius: 4rpx;
}

/* Specific state styles */
.guide-img-box.missing::before {
  left: 30%; /* Shifted to look cut off */
}

.guide-img-box.blur::before {
  filter: blur(4rpx);
}

.guide-img-box.glare::after {
  content: '';
  position: absolute;
  top: 20%;
  right: 20%;
  width: 30rpx;
  height: 30rpx;
  background: radial-gradient(circle, #FFF 0%, rgba(255,255,255,0) 70%);
}

.guide-status-icon {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  background: #FFF;
  border-radius: 50%;
  z-index: 5;
}

.guide-item text {
  font-size: 24rpx;
  color: #666;
}
