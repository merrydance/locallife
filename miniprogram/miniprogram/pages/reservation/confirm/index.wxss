.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.room-info {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.room-capacity {
  font-size: 28rpx;
  color: #666;
}

.form-section {
  margin-bottom: 24rpx;
}

.payment-tip {
  padding: 24rpx;
  display: flex;
  gap: 12rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.08);
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.mode-selector {
  padding: 24rpx;
}

.mode-selector .t-radio-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
