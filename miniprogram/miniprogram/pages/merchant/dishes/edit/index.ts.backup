import { upsertDish, getMerchantDishDetail, getMerchantCategories, uploadImage, DishDTO } from '../../../api/merchant'

const app = getApp<IAppOption>()

Page({
    data: {
        dishId: '',
        isEdit: false,
        merchantId: '',
        form: {
            name: '',
            category_id: '',
            price: '',
            stock: '',
            description: '',
            image_url: ''
        },
        categories: [] as any[],
        navBarHeight: 88,
        loading: false,
        submitting: false
    },

    onLoad(options: any) {
        if (app.globalData.merchantId) {
            this.setData({ merchantId: app.globalData.merchantId })
            this.init(options.id)
        } else {
            app.userInfoReadyCallback = () => {
                if (app.globalData.merchantId) {
                    this.setData({ merchantId: app.globalData.merchantId })
                    this.init(options.id)
                } else {
                    wx.showToast({ title: '无权限', icon: 'none' })
                    setTimeout(() => wx.navigateBack(), 1500)
                }
            }
        }
    },

    init(id?: string) {
        this.loadCategoriesAndDish(id)
        if (id) {
            this.setData({ dishId: id, isEdit: true })
        }
    },

    onNavHeight(e: WechatMiniprogram.CustomEvent) {
        this.setData({ navBarHeight: e.detail.navBarHeight })
    },

    async loadCategoriesAndDish(dishId?: string) {
        this.setData({ loading: true })
        try {
            // Load categories from API
            let categories = []
            try {
                 const cats = await getMerchantCategories(this.data.merchantId)
                 categories = cats.map((c: any) => ({ id: c.id, name: c.name }))
            } catch (e) {
                 console.error('Categories load failed', e)
            }
            
            // Fallback or default
            if (categories.length === 0) {
                categories.push({ id: 'default', name: '默认分类' })
            }

            this.setData({ categories })

            if (dishId) {
                const dish = await getMerchantDishDetail(this.data.merchantId, dishId)
                if (dish) {
            this.setData({
                form: {
                            name: dish.name,
                            category_id: dish.category_id,
                            price: String(dish.price / 100),
                            stock: String(dish.daily_limit || 0), // Use daily_limit for input
                            description: dish.description,
                            image_url: dish.image_url
                        }
                    })
                }
            }
            this.setData({ loading: false })
        } catch (error) {
            console.error('Load failed', error)
            wx.showToast({ title: '加载失败', icon: 'error' })
            this.setData({ loading: false })
        }
    },

    onInputChange(e: WechatMiniprogram.CustomEvent) {
        const { field } = e.currentTarget.dataset
        this.setData({
            [`form.${field}`]: e.detail.value
        })
    },

    onCategoryChange(e: WechatMiniprogram.CustomEvent) {
        const index = Number(e.detail.value)
        if (index >= 0 && index < this.data.categories.length) {
            const selectedCategory = this.data.categories[index]
            this.setData({ 'form.category_id': selectedCategory.id })
        }
    },

    onChooseImage() {
        wx.chooseImage({
            count: 1,
            success: (res) => {
                const filePath = res.tempFilePaths[0]
                wx.showLoading({ title: '上传中...' })
                
                uploadImage(filePath)
                    .then(url => {
                        this.setData({ 'form.image_url': url })
                        wx.hideLoading()
                    })
                    .catch(err => {
                        console.error(err)
                        wx.hideLoading()
                        wx.showToast({ title: '上传失败', icon: 'none' })
                    })
            }
        })
    },

    async onSubmit() {
        const { form, isEdit, dishId, merchantId } = this.data

        if (!form.name || !form.category_id || !form.price) {
            wx.showToast({ title: '请填写必填项', icon: 'none' })
            return
        }

        this.setData({ submitting: true })

        try {
            const payload: Partial<DishDTO> = {
                name: form.name,
                category_id: form.category_id,
                price: Math.round(parseFloat(form.price) * 100), // Convert to cents
                daily_limit: parseInt(form.stock) || 0, // Map input to daily_limit
                description: form.description,
                image_url: form.image_url,
                merchant_id: merchantId
            }

            if (isEdit) {
                payload.id = dishId
            }

            await upsertDish(merchantId, payload)

            wx.showToast({ title: isEdit ? '保存成功' : '创建成功', icon: 'success' })
            setTimeout(() => wx.navigateBack(), 1500)
        } catch (error) {
            console.error('Submit failed', error)
            wx.showToast({ title: '保存失败', icon: 'error' })
            this.setData({ submitting: false })
        }
    }
})
