.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.form-container {
  padding: 24rpx;
}

.input,
.picker {
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #F6F6F6;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 16rpx;
}

.image-preview {
  margin-top: 24rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.08);
}

.submit-btn {
  width: 100%;
}
@media (min-width: 750px) {
  .form-container {
    padding: 24px !important;
    max-width: 800px !important;
    margin: 0 auto !important;
  }
  .input, .picker, .textarea {
    font-size: 14px !important;
  }
  .image-preview {
    width: 120px !important;
    height: 120px !important;
  }
  .submit-bar {
    max-width: 800px !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    border-radius: 8px 8px 0 0 !important;
  }
}
