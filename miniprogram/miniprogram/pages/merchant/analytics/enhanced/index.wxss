.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.content {
  padding: 24rpx;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.large-screen .metrics-grid {
  grid-template-columns: repeat(4, 1fr);
}

.metric-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.metric-label {
  font-size: 26rpx;
  color: #666;
}

.metric-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.metric-trend {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  gap: 4rpx;
}

.metric-trend.up { color: #00A870; }
.metric-trend.down { color: #E34D59; }

.chart-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chart-container {
  width: 100%;
  height: 400rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}
@media (min-width: 750px) {
  .content {
    padding: 16px !important;
  }
  .metrics-grid {
    grid-template-columns: repeat(4, 1fr) !important;
    gap: 16px !important;
  }
  .metric-card, .chart-card {
    padding: 16px !important;
    border-radius: 8px !important;
  }
  .card-title {
    font-size: 16px !important;
  }
  .metric-value {
    font-size: 24px !important;
  }
  .metric-label {
    font-size: 14px !important;
  }
  .chart-container {
    height: 350px !important;
  }
}
