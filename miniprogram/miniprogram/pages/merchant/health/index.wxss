/* 经营健康分 - 桌面级 SaaS 样式 */

/* 小屏提示 */
.desktop-only-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.notice-box {
  background: #fff;
  padding: 48px 64px;
  border-radius: 16px;
  text-align: center;
  box-shadow: 0 20px 60px rgba(0,0,0,0.2);
}

.notice-icon { font-size: 64px; display: block; margin-bottom: 16px; }
.notice-title { display: block; font-size: 20px; font-weight: 600; color: #1a1a2e; margin-bottom: 8px; }
.notice-desc { display: block; font-size: 14px; color: #666; margin-bottom: 24px; }
.btn-back {
  display: inline-block;
  padding: 12px 32px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 8px;
  font-size: 14px;
}

/* SaaS 布局 */
.saas-layout {
  min-height: 100vh;
  background: #f0f2f5;
}

.page-container {
  padding: 24px 32px;
  margin-top: 56px;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24px;
}

.page-title-section { display: flex; flex-direction: column; gap: 4px; }
.page-title { font-size: 24px; font-weight: 700; color: #1a1a2e; }
.page-subtitle { font-size: 14px; color: #8c8c8c; }

.page-actions { display: flex; gap: 12px; }
.btn-refresh {
  padding: 10px 20px;
  background: #fff;
  border: 1px solid #d9d9d9;
  border-radius: 8px;
  font-size: 14px;
  color: #333;
  cursor: pointer;
}
.btn-refresh:hover { background: #f5f5f5; }

/* Loading */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px;
  color: #888;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 健康分大卡片 */
.health-card-large {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16px;
  padding: 32px 40px;
  margin-bottom: 24px;
  color: #fff;
}

.score-section {
  display: flex;
  align-items: center;
  gap: 32px;
}

.score-ring {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.2);
  border: 4px solid rgba(255,255,255,0.5);
}

.score-ring.excellent { background: rgba(82, 196, 26, 0.3); border-color: #52c41a; }
.score-ring.good { background: rgba(24, 144, 255, 0.3); border-color: #1890ff; }
.score-ring.warning { background: rgba(250, 173, 20, 0.3); border-color: #faad14; }
.score-ring.danger { background: rgba(255, 77, 79, 0.3); border-color: #ff4d4f; }

.score-value {
  font-size: 48px;
  font-weight: 700;
}

.score-info { display: flex; flex-direction: column; gap: 4px; }
.level-text { font-size: 28px; font-weight: 600; }
.level-desc { font-size: 16px; opacity: 0.9; }

/* 区块 */
.section {
  background: #fff;
  border-radius: 12px;
  padding: 24px;
  margin-bottom: 24px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #1a1a2e;
}

/* 指标网格 */
.metrics-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16px;
}

.metric-card {
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  background: #f8f9fc;
  border: 2px solid transparent;
}

.metric-card.good {
  background: linear-gradient(135deg, #f0fff4, #dcfce7);
  border-color: #86efac;
}

.metric-card.warning {
  background: linear-gradient(135deg, #fffbe6, #fef08a);
  border-color: #fde047;
}

.metric-card.danger {
  background: linear-gradient(135deg, #fff1f0, #fecaca);
  border-color: #fca5a5;
}

.metric-value {
  display: block;
  font-size: 32px;
  font-weight: 700;
  color: #1a1a2e;
  margin-bottom: 8px;
}

.metric-label {
  font-size: 14px;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48px;
  color: #8c8c8c;
}

.empty-icon { font-size: 48px; margin-bottom: 12px; }
.empty-text { font-size: 15px; }

/* 违规列表 */
.violations-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.violation-card {
  padding: 16px 20px;
  background: #fafbfc;
  border-radius: 10px;
  border-left: 4px solid #ff4d4f;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.type-tag {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
}

.type-tag.warning {
  background: #fffbe6;
  color: #d48806;
}

.type-tag.danger {
  background: #fff1f0;
  color: #cf1322;
}

.time { font-size: 12px; color: #999; }

.violation-title {
  display: block;
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-bottom: 6px;
}

.violation-desc {
  display: block;
  font-size: 13px;
  color: #666;
  margin-bottom: 12px;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-appeal {
  padding: 6px 16px;
  background: #fff;
  border: 1px solid #d9d9d9;
  border-radius: 6px;
  font-size: 13px;
  color: #333;
  cursor: pointer;
}

.btn-appeal:hover {
  border-color: #667eea;
  color: #667eea;
}
