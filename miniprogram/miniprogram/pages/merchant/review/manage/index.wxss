/* 评价管理 - 桌面级 SaaS 样式 */

/* 小屏提示 */
.desktop-only-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.notice-box {
  background: #fff;
  padding: 48px 64px;
  border-radius: 16px;
  text-align: center;
  box-shadow: 0 20px 60px rgba(0,0,0,0.2);
}

.notice-icon { font-size: 64px; display: block; margin-bottom: 16px; }
.notice-title { display: block; font-size: 20px; font-weight: 600; color: #1a1a2e; margin-bottom: 8px; }
.notice-desc { display: block; font-size: 14px; color: #666; margin-bottom: 24px; }
.btn-back {
  display: inline-block;
  padding: 12px 32px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 8px;
  font-size: 14px;
}

/* SaaS 布局 */
.saas-layout {
  min-height: 100vh;
  background: #f0f2f5;
}

.page-container {
  padding: 24px 32px;
  margin-top: 56px;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24px;
}

.page-title-section { display: flex; flex-direction: column; gap: 4px; }
.page-title { font-size: 24px; font-weight: 700; color: #1a1a2e; }
.page-subtitle { font-size: 14px; color: #8c8c8c; }

.page-actions { display: flex; gap: 12px; }
.btn-refresh {
  padding: 10px 20px;
  background: #fff;
  border: 1px solid #d9d9d9;
  border-radius: 8px;
  font-size: 14px;
  color: #333;
}

/* Tabs */
.tabs-bar {
  display: flex;
  gap: 8px;
  margin-bottom: 24px;
  background: #fff;
  padding: 8px;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.tab-item {
  padding: 10px 24px;
  border-radius: 8px;
  font-size: 14px;
  color: #666;
  cursor: pointer;
  transition: all 0.2s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.tab-item:hover:not(.active) {
  background: #f5f5f5;
}

/* Loading */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px;
  color: #888;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin { to { transform: rotate(360deg); } }

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80px;
  color: #8c8c8c;
}

.empty-icon { font-size: 64px; margin-bottom: 16px; }
.empty-text { font-size: 16px; }

/* 评价列表 */
.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.review-card {
  background: #fff;
  border-radius: 12px;
  padding: 20px 24px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #e8e8e8;
}

.user-name {
  font-size: 15px;
  font-weight: 500;
  color: #333;
}

.rating {
  font-size: 16px;
}

.star { color: #e0e0e0; }
.star.filled { color: #ffc107; }

.review-content {
  display: block;
  font-size: 14px;
  color: #333;
  line-height: 1.6;
  margin-bottom: 8px;
}

.review-time {
  display: block;
  font-size: 12px;
  color: #999;
  margin-bottom: 12px;
}

/* 商家回复 */
.reply-section {
  background: #f8f9fc;
  padding: 12px 16px;
  border-radius: 8px;
  margin-top: 12px;
}

.reply-label {
  font-size: 12px;
  color: #667eea;
  margin-bottom: 6px;
}

.reply-content {
  font-size: 13px;
  color: #666;
  line-height: 1.5;
}

/* 回复按钮 */
.review-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 12px;
}

.btn-reply {
  padding: 8px 20px;
  background: #fff;
  border: 1px solid #667eea;
  color: #667eea;
  border-radius: 6px;
  font-size: 13px;
}

.btn-reply:hover {
  background: #667eea;
  color: #fff;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 20px;
  color: #999;
  font-size: 14px;
}

.load-more {
  cursor: pointer;
  color: #667eea;
}

/* 弹窗 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-box {
  background: #fff;
  border-radius: 12px;
  width: 480px;
  max-width: 90%;
  box-shadow: 0 10px 40px rgba(0,0,0,0.2);
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.dialog-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.dialog-close {
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  cursor: pointer;
  color: #999;
}

.dialog-close:hover {
  background: #f5f5f5;
  color: #333;
}

.dialog-body {
  padding: 20px;
}

.reply-textarea {
  width: 100%;
  height: 120px;
  padding: 12px;
  border: 1px solid #d9d9d9;
  border-radius: 8px;
  font-size: 14px;
  resize: none;
}

.dialog-footer {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
  padding: 16px 20px;
  border-top: 1px solid #f0f0f0;
}

.btn-cancel, .btn-confirm {
  padding: 10px 24px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
}

.btn-cancel {
  background: #fff;
  border: 1px solid #d9d9d9;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}
