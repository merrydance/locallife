<custom-navbar title="客服入口" showBack="{{true}}" bind:navheight="onNavHeight" />

<view class="page" style="padding-top: {{navBarHeight}}px;">
  <view class="credit-hero">
    <view class="credit-title">信用让生活更好</view>
    <view class="credit-subtitle">你的行为决定你是谁</view>
    <view class="credit-desc">我们用行动鼓励良币驱逐劣币，信用良好，索赔无需举证</view>
  </view>

  <view class="card" wx:for="{{channels}}" wx:key="id" data-channel="{{item}}" bindtap="onChannelTap">
    <view class="card-content">
      <view>
        <view class="card-title">{{item.title}}</view>
        <view class="card-sub">{{item.subtitle}}</view>
      </view>
      <view class="card-action">{{item.action}}</view>
    </view>
  </view>

  <view class="faq-card">
    <view class="faq-title">常见问题快速入口</view>
    <view class="faq-item" wx:for="{{faqs}}" wx:key="id" data-faq="{{item}}" bindtap="onFaqTap">
      <view>
        <view class="faq-question">{{item.question}}</view>
        <view class="faq-answer">{{item.answer}}</view>
      </view>
      <text class="arrow">›</text>
    </view>
  </view>
</view>
