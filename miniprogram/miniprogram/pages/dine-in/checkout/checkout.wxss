/* 堂食/预订结算页样式 */

/* 页面根节点 - 防止横向滚动 */
page {
  width: 100%;
  overflow-x: hidden;
}

.page-container {
  min-height: 100vh;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  background: var(--td-bg-color-page, #f5f5f5);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

/* 主滚动区 */
.main-scroll {
  flex: 1;
  width: 100%;
  max-width: 100vw;
  padding: var(--customer-page-padding, 20rpx);
  padding-bottom: 0;
  box-sizing: border-box;
  overflow-x: hidden;
}

.section-card {
  background: var(--td-bg-color-container, #fff);
  border-radius: var(--customer-card-radius, 16rpx);
  padding: var(--customer-card-padding, 20rpx);
  margin-bottom: var(--customer-card-margin, 12rpx);
  box-shadow: var(--customer-card-shadow, 0 2rpx 8rpx rgba(0,0,0,0.04));
  box-sizing: border-box;
  overflow: hidden;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #333);
  margin-bottom: 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-count {
  font-size: 24rpx;
  color: var(--td-text-color-secondary, #666);
}

/* 商户信息 */
.merchant-section {
  background: linear-gradient(135deg, #fff 0%, #f8fbff 100%);
}

.merchant-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.merchant-logo {
  flex-shrink: 0;
}

.merchant-info {
  flex: 1;
  min-width: 0;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #333);
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.merchant-address {
  font-size: 24rpx;
  color: var(--td-text-color-secondary, #999);
  margin-top: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 菜品列表 */
.items-list {
  margin-top: 8rpx;
}

.order-item {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--td-bg-color-secondarycontainer, #f0f0f0);
}

.order-item:last-child {
  border-bottom: none;
}

.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-top-row,
.item-bottom-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--td-text-color-primary, #333);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-price {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #333);
  margin-left: 16rpx;
}

.item-spec {
  font-size: 24rpx;
  color: var(--td-text-color-placeholder, #999);
}

.item-qty {
  font-size: 24rpx;
  color: var(--td-text-color-secondary, #666);
}

/* 优惠券样式 */
.voucher-selected {
  color: var(--td-brand-color, #0052d9) !important;
  font-weight: 500;
}

.voucher-placeholder {
  color: var(--td-text-color-placeholder, #999) !important;
}

/* 价格明细 */
.price-section {
  padding-top: 24rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.price-label {
  font-size: 28rpx;
  color: var(--td-text-color-secondary, #666);
}

.price-label.bold {
  font-weight: 600;
  color: var(--td-text-color-primary, #333);
}

.price-value {
  font-size: 28rpx;
  color: var(--td-text-color-primary, #333);
}

.price-value.discount {
  color: var(--td-error-color, #e34d59);
}

.price-value.total {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--td-error-color, #e34d59);
}

.total-row {
  border-top: 1rpx solid var(--td-bg-color-secondarycontainer, #f0f0f0);
  margin-top: 12rpx;
  padding-top: 20rpx;
}

/* 备注 */
.remark-textarea {
  background: var(--td-bg-color-secondarycontainer, #f5f5f5) !important;
  border-radius: 12rpx !important;
  min-height: 120rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 180rpx;
}

/* 提交栏 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: var(--td-bg-color-container, #fff);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.submit-left {
  display: flex;
  align-items: baseline;
}

.submit-label {
  font-size: 28rpx;
  color: var(--td-text-color-secondary, #666);
}

.submit-price {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--td-error-color, #e34d59);
  margin-left: 4rpx;
}

.submit-btn {
  width: 280rpx;
}

/* 优惠券弹窗 */
.voucher-popup {
  background: var(--td-bg-color-container, #fff);
  border-radius: 24rpx 24rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--td-bg-color-secondarycontainer, #f0f0f0);
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #333);
}

.voucher-scroll {
  flex: 1;
  padding: 20rpx;
  max-height: 50vh;
  box-sizing: border-box;
  overflow-x: hidden;
}

.voucher-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: var(--td-bg-color-container, #fff);
  border: 2rpx solid var(--td-bg-color-secondarycontainer, #f0f0f0);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
  box-sizing: border-box;
  overflow: hidden;
  max-width: 100%;
}

.voucher-item:active {
  opacity: 0.8;
}

.voucher-item.selected {
  border-color: var(--td-brand-color, #0052d9);
  background: rgba(0, 82, 217, 0.04);
}

.voucher-amount {
  width: 120rpx;
  min-width: 120rpx;
  flex-shrink: 0;
  text-align: center;
  color: var(--td-error-color, #e34d59);
}

.voucher-amount .currency {
  font-size: 24rpx;
  font-weight: 600;
}

.voucher-amount .amount {
  font-size: 40rpx;
  font-weight: 700;
}

.voucher-content {
  flex: 1;
  margin-left: 16rpx;
  min-width: 0;
  overflow: hidden;
}

.voucher-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--td-text-color-primary, #333);
  display: block;
}

.voucher-condition {
  font-size: 24rpx;
  color: var(--td-text-color-placeholder, #999);
  margin-top: 8rpx;
  display: block;
}

/* 优惠券加载状态 */
.voucher-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

/* t-cell 标签样式：浅灰色 */
.cell-label {
  color: var(--td-text-color-secondary, #666) !important;
  font-weight: 400 !important;
}

/* t-cell 值样式：深色突出 */
.cell-value {
  color: var(--td-text-color-primary, #333) !important;
  font-weight: 500 !important;
}