.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  background: #e34d59;
  padding: 40rpx 32rpx 80rpx;
  color: #fff;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-top: 8rpx;
  display: block;
}

.content {
  margin-top: -40rpx;
  padding: 0 24rpx;
}

.coupon-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.coupon-left {
  width: 200rpx;
  background: #fff5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #e34d59;
  border-right: 2rpx dashed #ffccc7;
  padding: 24rpx 0;
}

.value-box {
  display: flex;
  align-items: baseline;
}

.symbol {
  font-size: 24rpx;
}

.value {
  font-size: 56rpx;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
}

.condition {
  font-size: 22rpx;
  margin-top: 8rpx;
  color: #666;
}

.coupon-right {
  flex: 1;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info {
  flex: 1;
  margin-right: 20rpx;
}

.coupon-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.shop-name {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.progress-box {
  width: 200rpx;
}

.sold-text {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.load-more { padding: 32rpx 0; display: flex; justify-content: center; align-items: center; }
.no-more { color: #999; font-size: 24rpx; }
