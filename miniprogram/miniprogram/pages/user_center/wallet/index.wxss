.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.balance-card {
  background: linear-gradient(135deg, #E34D59 0%, #FF7D88 100%);
  margin: 24rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(227, 77, 89, 0.3);
}

.balance-info {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.amount {
  font-size: 64rpx;
  font-weight: bold;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.transactions-section {
  background: #fff;
  padding: 24rpx;
  min-height: 500rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.empty {
  padding: 60rpx 0;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.transaction-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.item-amount.positive {
  color: #E34D59;
}

.item-amount.negative {
  color: #333;
}
