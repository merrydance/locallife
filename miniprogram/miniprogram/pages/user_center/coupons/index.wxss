.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.tabs-section {
  background: #fff;
  margin-bottom: 16rpx;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.coupons-container {
  padding: 24rpx;
}

.empty {
  padding: 100rpx 0;
}

.coupons-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.coupon-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.coupon-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  border-right: 2rpx dashed rgba(255,255,255,0.5);
}

.discount-amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

.threshold {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 8rpx;
}

.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #fff;
}

.merchant-name {
  font-size: 24rpx;
  opacity: 0.9;
}

.coupon-name {
  font-size: 28rpx;
  font-weight: bold;
}

.expire-date {
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}

.claim-btn {
  margin-top: 8rpx;
  align-self: flex-start;
}
