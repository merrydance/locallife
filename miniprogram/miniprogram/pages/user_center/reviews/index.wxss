.page-container {
  min-height: 100vh;
  background: #F6F6F6;
  box-sizing: border-box;
}

.reviews-list {
  padding: 24rpx;
}

.review-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.shop-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.rating-row {
  margin-bottom: 16rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: block;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.review-img {
  border-radius: 8rpx;
}

.merchant-reply {
  background: #F9F9F9;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.reply-label {
  font-weight: bold;
  color: #333;
}

.empty {
  padding-top: 200rpx;
}

.loading-more {
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 24rpx 0;
}
