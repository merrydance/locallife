.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.content {
  padding: 24rpx;
}

.credit-card {
  background: linear-gradient(135deg, #0052D9 0%, #00A870 100%);
  border-radius: 16rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.2);
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.score-value {
  font-size: 64rpx;
  font-weight: bold;
  line-height: 1;
}

.score-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}

.level-info {
  text-align: center;
}

.level-name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.level-desc {
  font-size: 24rpx;
  opacity: 0.8;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.privileges-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.privilege-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #333;
  background: #F9F9F9;
  padding: 24rpx;
  border-radius: 8rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.history-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-reason {
  font-size: 28rpx;
  color: #333;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.item-amount.positive { color: #00A870; }
.item-amount.negative { color: #E34D59; }
