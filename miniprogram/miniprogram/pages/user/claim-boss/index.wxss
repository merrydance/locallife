.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

.claim-section {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.input-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.input-wrapper {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.code-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  color: #ffffff;
  box-sizing: border-box;
}

.code-input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.btn-scan {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  height: 88rpx;
  background: rgba(99, 102, 241, 0.2);
  border: 1px solid rgba(99, 102, 241, 0.5);
  border-radius: 16rpx;
  color: #a5b4fc;
  font-size: 30rpx;
}

.scan-icon {
  font-size: 36rpx;
}

.btn-claim {
  height: 96rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-claim[disabled] {
  opacity: 0.5;
}

.btn-claim.loading {
  background: rgba(99, 102, 241, 0.5);
}

.tips {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.tips-item {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1.6;
}

/* Success State */
.success-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  gap: 24rpx;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.success-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #4ade80;
}

.success-merchant {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
}

.btn-primary {
  width: 80%;
  height: 96rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-secondary {
  width: 80%;
  height: 88rpx;
  background: transparent;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 30rpx;
}
