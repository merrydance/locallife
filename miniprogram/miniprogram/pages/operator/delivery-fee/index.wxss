.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section {
  background: #fff;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
}

.section-title {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #999;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-range {
  display: flex;
  align-items: center;
}

.time-picker {
  padding: 0 12rpx;
  color: #333;
}

.separator {
  margin: 0 8rpx;
  color: #999;
}

.footer {
  margin-top: 48rpx;
  padding: 0 32rpx;
}
