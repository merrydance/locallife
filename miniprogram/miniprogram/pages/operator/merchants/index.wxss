.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.merchants-list {
  padding: 24rpx;
}

.merchants-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

@media (min-width: 1024rpx) {
  .merchants-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1440rpx) {
  .merchants-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.merchant-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.card-body {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  font-size: 26rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
  font-weight: 500;
}

.rating {
  color: #FF9C00;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}
