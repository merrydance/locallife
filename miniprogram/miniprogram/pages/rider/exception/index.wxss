.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.type {
  font-weight: bold;
  color: #333;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
  border-top: 1rpx solid #fafafa;
  padding-top: 12rpx;
  margin-top: 12rpx;
}

.form {
    padding-top: 12rpx;
}

.form-item {
    margin-bottom: 24rpx;
}

.label {
    display: block;
    font-size: 28rpx;
    color: rgba(0,0,0,0.9);
    margin-bottom: 16rpx;
}
