.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.content {
  padding: 24rpx;
}

.status-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.time-limit {
  font-size: 28rpx;
  color: #E34D59;
}

.income-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #F0F0F0;
}

.income {
  font-size: 36rpx;
  font-weight: bold;
  color: #E34D59;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.location-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-top: 12rpx;
  flex-shrink: 0;
}

.dot.pickup { background: #0052D9; }
.dot.deliver { background: #E34D59; }

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.address {
  font-size: 26rpx;
  color: #666;
}

.divider {
  height: 1rpx;
  background: #F0F0F0;
  margin: 24rpx 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.item-row {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #333;
}

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.info-row .label {
  color: #666;
}

.info-row .value {
  color: #333;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.08);
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 24rpx;
}

.bottom-bar t-button {
  flex: 1;
}
