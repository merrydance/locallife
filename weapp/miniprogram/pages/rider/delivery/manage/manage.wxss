/* 骑手配送管理页面样式 */

.delivery-container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.main-content {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 骑手状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.status-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-text {
  font-size: 26rpx;
}

/* Tab导航 */
.delivery-tabs {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* Tab内容 */
.tab-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 任务列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 任务卡片 */
.task-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.task-card.active {
  border-left: 6rpx solid #1890ff;
}

.task-card.history {
  opacity: 0.8;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.delivery-fee {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.card-body {
  margin-bottom: 20rpx;
}

/* 地址区域 */
.address-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.address-item {
  display: flex;
  gap: 16rpx;
}

.address-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.address-info .label {
  font-size: 24rpx;
  color: #999;
}

.address-info .address {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.address-info .detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 任务元信息 */
.task-meta {
  display: flex;
  gap: 30rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.meta-item {
  font-size: 26rpx;
  color: #666;
}

/* 历史信息 */
.history-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 异常上报弹窗 */
.exception-popup {
  width: 90%;
  max-width: 700rpx;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 空状态 */
t-empty {
  padding: 100rpx 0;
}
