.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 加载容器居中 */
.loading-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 100rpx 0;
}

.content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 桌台信息 */
.table-info {
  background: #fff;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.info-row {
  display: flex;
  align-items: center;
}

.info-row .label {
  font-size: 28rpx;
  color: #666;
}

.info-row .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 菜单区域 */
.dishes-container {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.category-sidebar {
  width: 180rpx;
  background: #f8f8f8;
  height: 100%;
}

.category-item {
  padding: 32rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  position: relative;
}

.category-item.active {
  background: #fff;
  color: #333;
  font-weight: bold;
}

.category-indicator {
  position: absolute;
  left: 0;
  top: 30%;
  height: 40%;
  width: 8rpx;
  background: #ff6b35;
  border-radius: 0 4rpx 4rpx 0;
}

/* 菜品列表 */
.dishes-list {
  flex: 1;
  background: #fff;
  padding: 0 24rpx;
}

.dish-item {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.dish-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-box {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 8rpx;
}

.dish-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #e34d59;
}

.dish-member-price {
  font-size: 22rpx;
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

/* 菜品控制区 */
.dish-card-controls {
  display: flex;
  align-items: center;
}

.customize-btn-wrapper {
  position: relative;
}

.stepper-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stepper-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.qty-text {
  font-size: 30rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
  font-weight: 500;
}

.cart-badge {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  background: #e34d59;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  border: 2rpx solid #fff;
  z-index: 10;
}

/* 购物车弹窗样式 */
.cart-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.cart-modal-content {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  z-index: 1001;
}

.cart-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.cart-title {
  font-size: 32rpx;
  font-weight: bold;
}

.clear-cart {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #999;
}

.cart-items-scroll {
  flex: 1;
  padding: 0 32rpx;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  display: block;
}

.item-specs {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.item-price {
  font-size: 28rpx;
  color: #e34d59;
  font-weight: bold;
  margin-top: 8rpx;
  display: block;
}

.item-stepper {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.item-stepper .qty {
  font-size: 32rpx;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

/* 定制 Drawer 样式 */
.custom-drawer {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  max-height: 85vh;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: bold;
}

.drawer-content {
  flex: 1;
  overflow-y: auto;
}

.spec-group {
  margin-bottom: 32rpx;
}

.group-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-item {
  --td-tag-font-size: 26rpx;
  --td-tag-padding: 12rpx 24rpx;
}

.spec-item.active {
  --td-tag-bg-color: rgba(255, 107, 53, 0.1);
  --td-tag-text-color: #ff6b35;
  --td-tag-border-color: #ff6b35;
}

.drawer-footer {
  padding-top: 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.stepper-control.big {
  gap: 24rpx;
}

.stepper-control.big .qty-text {
  font-size: 36rpx;
  width: 80rpx;
}

/* 详情弹窗 */
.dish-detail-popup {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.detail-image {
  width: 100%;
  height: 450rpx;
}

.detail-info {
  padding: 32rpx;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.detail-name {
  font-size: 36rpx;
  font-weight: bold;
}

.detail-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 32rpx;
  display: block;
}

.detail-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
