/* 扫码点餐入口页面样式 */
.scan-entry-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.error-text {
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  background: #fff;
  color: #667eea;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 桌台信息容器 */
.table-info-container {
  padding-bottom: 40rpx;
}

/* 商户头部 */
.merchant-header {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.merchant-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.merchant-info {
  flex: 1;
}

.merchant-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.merchant-category {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.merchant-rating {
  display: flex;
  align-items: center;
}

.stars {
  margin-right: 10rpx;
}

.star {
  color: #ddd;
  font-size: 24rpx;
}

.star.filled {
  color: #ffd700;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
}

.merchant-action {
  display: flex;
  align-items: center;
  color: #667eea;
}

.action-text {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.action-arrow {
  font-size: 20rpx;
}

/* 桌台信息卡片 */
.table-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.table-number {
  display: flex;
  align-items: baseline;
}

.table-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.table-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

.table-capacity {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.capacity-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.capacity-text {
  font-size: 24rpx;
  color: #666;
}

.table-status {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.status-indicator.available {
  background: #52c41a;
}

.status-indicator.occupied {
  background: #faad14;
}

.status-indicator.reserved {
  background: #f5222d;
}

.status-text {
  font-size: 28rpx;
  color: #333;
}

.table-tips {
  display: flex;
  align-items: flex-start;
  background: #f0f9ff;
  border-radius: 12rpx;
  padding: 16rpx;
}

.tips-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 2rpx;
}

.tips-text {
  flex: 1;
  font-size: 24rpx;
  color: #1890ff;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  margin-bottom: 20rpx;
}

.start-dining-btn {
  width: 100%;
  background: linear-gradient(135deg, #52c41a, #73d13d);
  color: #fff;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(82, 196, 26, 0.3);
}

.start-dining-btn.disabled {
  background: #d9d9d9;
  color: #999;
  box-shadow: none;
}

.secondary-actions {
  display: flex;
  gap: 20rpx;
}

.secondary-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

/* 商户营业信息 */
.business-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  max-width: 400rpx;
}

/* 服务推广广告位 */
.service-promotion {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.promotion-header {
  margin-bottom: 20rpx;
}

.promotion-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.promotion-services {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.service-card:active {
  transform: scale(0.98);
}

.service-card.takeout {
  border-left: 6rpx solid #52c41a;
}

.service-card.reservation {
  border-left: 6rpx solid #1890ff;
}

.service-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #999;
}

.service-arrow {
  font-size: 24rpx;
  color: #ccc;
}