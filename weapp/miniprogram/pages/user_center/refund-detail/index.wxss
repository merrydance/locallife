.page {
  min-height: 100vh;
  padding: 0 32rpx 80rpx;
  background: #f5f6fb;
}

.loading {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
}

/* 状态卡片 */
.status-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 48rpx 32rpx;
  margin-top: 24rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(18, 30, 63, 0.08);
}

.status-icon {
  margin-bottom: 16rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d2750;
  margin-bottom: 12rpx;
}

.amount {
  font-size: 56rpx;
  font-weight: 700;
  color: #1d2750;
}

/* 进度卡片 */
.progress-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(18, 30, 63, 0.08);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d2750;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #edf0fb;
}

.progress-list {
  padding-left: 8rpx;
}

.progress-item {
  display: flex;
  position: relative;
  padding-bottom: 32rpx;
}

.progress-item:last-child {
  padding-bottom: 0;
}

.progress-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e0e4f0;
  margin-top: 6rpx;
  z-index: 1;
}

.progress-item.done .progress-dot {
  background: #1d63ff;
}

.progress-item.active .progress-dot {
  background: #1d63ff;
  box-shadow: 0 0 0 8rpx rgba(29, 99, 255, 0.2);
}

.progress-line {
  position: absolute;
  left: 9rpx;
  top: 26rpx;
  width: 2rpx;
  height: calc(100% - 26rpx);
  background: #e0e4f0;
}

.progress-item.done .progress-line {
  background: #1d63ff;
}

.progress-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-title {
  font-size: 28rpx;
  color: #9aa4c2;
}

.progress-item.done .progress-title,
.progress-item.active .progress-title {
  color: #1d2750;
  font-weight: 500;
}

.progress-time {
  font-size: 24rpx;
  color: #9aa4c2;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(18, 30, 63, 0.08);
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.label {
  font-size: 28rpx;
  color: #9aa4c2;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #1d2750;
  text-align: right;
  max-width: 65%;
  word-break: break-all;
}

.value.error {
  color: #e34d59;
}

/* 提示卡片 */
.tips-card {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #fff9e6;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #865900;
}

.empty {
  padding-top: 200rpx;
}
