.page-container {
  min-height: 100vh;
  background: #f5f6fb;
}

/* Tab切换 */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #edf0fb;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #57618c;
  position: relative;
}

.tab-item.active {
  color: #1d63ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: #1d63ff;
  border-radius: 3rpx;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.empty {
  padding: 100rpx 0;
}

.favorites-list {
  padding: 24rpx;
}

.favorite-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-content {
  flex: 1;
  display: flex;
  gap: 24rpx;
}

.remove-btn {
  padding: 16rpx;
  flex-shrink: 0;
}

.item-image {
  border-radius: 8rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-bottom {
  display: flex;
  align-items: center;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #E34D59;
}

.rating {
  font-size: 26rpx;
  color: #FF9C00;
}
