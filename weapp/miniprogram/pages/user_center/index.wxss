.page-container {
  min-height: 100vh;
  background: var(--td-bg-color-page);
  box-sizing: border-box;
}

.profile-section {
  margin-bottom: 24rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  padding: 24rpx 32rpx 16rpx;
  font-size: 28rpx;
  color: #999;
}

/* User Profile Header */
.user-card {
  background: #fff;
  padding: 32rpx 32rpx;
  display: flex;
  flex-direction: row; /* Changed to row */
  align-items: center;
  justify-content: flex-start; /* Left align */
}

.avatar-wrapper {
  padding: 0;
  width: 96rpx !important; /* Smaller size */
  height: 96rpx !important;
  border-radius: 50%;
  margin: 0 24rpx 0 0 !important; /* Right margin */
  background-color: #f3f3f3;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: block;
}

.edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  /* font-size removed, t-icon controls size */
}

.info-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* Left align */
  flex: 1;
}

.nickname-input {
  font-size: 32rpx; /* Smaller font */
  font-weight: 500;
  color: #333;
  text-align: left; /* Left align */
  height: 48rpx;
  min-height: 48rpx;
  width: 100%;
  background: transparent;
  padding: 0;
  border-radius: 0;
}
@media (min-width: 750px) {
  .responsive-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px 32px !important;
  }
  
  .user-grid-layout {
    display: grid;
    grid-template-columns: 260px 1fr; /* Re-balanced from 320px to 260px */
    gap: 20px; /* Further reduced from 24px */
    margin-bottom: 24px;
    align-items: flex-start;
  }
  
  .workbench-section {
    margin-bottom: 0 !important;
  }
  
  .functions-section {
    margin-bottom: 0 !important;
  }

  .registration-section {
    max-width: 1200px;
    margin-top: 24px;
  }

  .user-card {
    padding: 32px 48px !important;
    border-radius: 12px;
    margin-bottom: 24px !important;
  }
  .avatar-wrapper, .avatar {
    width: 80px !important;
    height: 80px !important;
  }
  .nickname-input {
    font-size: 24px !important;
    height: 40px !important;
    min-height: 40px !important;
  }
  .section-title {
    padding: 0 0 12px 0 !important;
    font-size: 15px !important;
    font-weight: 600 !important;
    color: var(--td-text-color-primary) !important;
  }
  .section {
    margin-bottom: 32px;
  }
  
  /* Reduction of internal gaps */
  .t-grid-item__content {
    padding: 8px 4px !important; /* Extremely tight for desktop */
  }
  .t-grid-item__text {
    margin-top: 2px !important; /* Minimal gap between icon and text */
    font-size: 13px !important;
  }

  /* Tighten Cell Spacing */
  .t-cell {
    padding: 12px 16px !important;
  }
}
