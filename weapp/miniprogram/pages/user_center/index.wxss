/* 用户中心 */

/* Skyline 滚动容器 */
.page-scroll {
  background: #f5f5f5;
  box-sizing: border-box;
}

.content-wrapper {
  padding: 24rpx;
}

.profile-section {
  margin-bottom: 24rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  padding: 24rpx 8rpx 16rpx;
  font-size: 28rpx;
  color: #999;
}

/* User Profile Header */
.user-card {
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.avatar-wrapper {
  padding: 0;
  width: 96rpx !important;
  height: 96rpx !important;
  border-radius: 50%;
  margin: 0 24rpx 0 0 !important;
  background-color: #f3f3f3;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: block;
}

.info-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
}

.nickname-input {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: left;
  height: 48rpx;
  min-height: 48rpx;
  width: 100%;
  background: transparent;
  padding: 0;
  border-radius: 0;
}
