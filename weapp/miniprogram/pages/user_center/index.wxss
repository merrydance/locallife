@import '../../styles/responsive.wxss';

/* PC 端用户中心样式 */
.pc-user-center {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24px 32px;
}

.pc-user-header {
  margin-bottom: 24px;
}

.pc-header-title {
  font-size: 24px;
  font-weight: 600;
  color: #333;
}

.pc-section {
  background: white;
  border-radius: 12px;
  padding: 20px 24px;
  margin-bottom: 16px;
}

.pc-section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

.pc-workbench-grid {
  display: flex;
  gap: 24px;
  flex-wrap: wrap;
}

.pc-workbench-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 20px 32px;
  background: #f8f9fc;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s;
}

.pc-workbench-item:hover {
  background: #eef1f8;
  transform: translateY(-2px);
}

.pc-workbench-name {
  font-size: 14px;
  color: #333;
}

.pc-hint-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 40px;
  color: #999;
}

.pc-hint-icon {
  font-size: 24px;
}

.pc-hint-text {
  font-size: 14px;
}

/* 手机端原有样式 */
.page-container {
  min-height: 100vh;
  background: var(--td-bg-color-page);
  box-sizing: border-box;
}

.content-wrapper {
  padding: 24rpx;
}

.profile-section {
  margin-bottom: 24rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  padding: 24rpx 8rpx 16rpx;
  font-size: 28rpx;
  color: #999;
}

/* User Profile Header */
.user-card {
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.avatar-wrapper {
  padding: 0;
  width: 96rpx !important;
  height: 96rpx !important;
  border-radius: 50%;
  margin: 0 24rpx 0 0 !important;
  background-color: #f3f3f3;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: block;
}

.info-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
}

.nickname-input {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: left;
  height: 48rpx;
  min-height: 48rpx;
  width: 100%;
  background: transparent;
  padding: 0;
  border-radius: 0;
}

/* 网格布局区域 - 保持单列手机布局 */
.user-grid-layout {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* PC端尺寸锁定 - 仅锁定尺寸，不改变布局 */
@media (min-width: 750px) {
  .content-wrapper {
    padding: 16px;
  }
  
  .user-card {
    padding: 16px !important;
    border-radius: 8px !important;
  }
  
  .avatar-wrapper, .avatar {
    width: 48px !important;
    height: 48px !important;
  }
  
  .nickname-input {
    font-size: 16px !important;
    height: 24px !important;
    min-height: 24px !important;
  }
  
  .section-title {
    padding: 12px 4px 8px !important;
    font-size: 13px !important;
  }
  
  .section {
    margin-bottom: 16px;
  }
}

