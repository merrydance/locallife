.page {
  min-height: 100vh;
  padding: 48rpx 0 64rpx;
  background: #f5f6fb;
}

/* 状态筛选Tab */
.status-tabs {
  display: flex;
  white-space: nowrap;
  padding: 0 0 24rpx;
  margin-bottom: 16rpx;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #57618c;
  background: #fff;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 12rpx rgba(29, 39, 71, 0.06);
}

.tab-item.active {
  color: #fff;
  background: linear-gradient(120deg, #1f7aec, #5b9dff);
  font-weight: 600;
}

.status.cancelled {
  color: #999;
  background: #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d2750;
  margin-bottom: 24rpx;
}

.card {
  background: #fff;
  border-radius: 28rpx;
  padding: 36rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 12rpx 30rpx rgba(29, 39, 71, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.merchant {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d2750;
}

.order-id {
  font-size: 24rpx;
  color: #9aa4c2;
}

.status {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status.delivered {
  color: #1d7a32;
  background: #dff7e6;
}

.status.delivering {
  color: #865900;
  background: #fff6d9;
}

.status.preparing {
  color: #0b5fff;
  background: #e1ebff;
}

.status.completed {
  color: #1d7a32;
  background: #dff7e6;
}

.status.pending {
  color: #865900;
  background: #fff6d9;
}

.highlight {
  background: #f4f6ff;
  padding: 20rpx;
  border-radius: 20rpx;
  color: #2b3d6f;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}

.badge-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.badge {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: #eef1ff;
  color: #4a5fe0;
  font-size: 22rpx;
}

.preview-list {
  border-top: 1rpx dashed #edf0fb;
  border-bottom: 1rpx dashed #edf0fb;
  padding: 16rpx 0;
  margin-bottom: 20rpx;
}

.preview-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.item-thumb {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  margin-right: 16rpx;
  background: #f0f2fb;
}

.name {
  flex: 1;
  font-size: 26rpx;
  color: #1d2750;
}

.count {
  font-size: 26rpx;
  color: #9aa4c2;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  color: #57618c;
  font-size: 26rpx;
}

.total {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d2750;
}

.btn-row {
  display: flex;
  gap: 16rpx;
}

button {
  flex: 1;
  height: 92rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
}

button::after {
  border: none;
}

.ghost {
  background: #f0f2fb;
  color: #1d2750;
}

.ghost.danger {
  color: #e34d59;
}

.primary {
  background: linear-gradient(120deg, #1f7aec, #5b9dff);
  color: #fff;
}

.order-list {
  padding: 0 32rpx;
}

.empty {
  padding-top: 200rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.loading-footer {
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

/* 骨架屏 */
.skeleton-container {
  padding: 48rpx 32rpx;
}

.card.skeleton {
  background: #fff;
  border-radius: 28rpx;
  padding: 36rpx;
  margin-bottom: 28rpx;
}

.skeleton-line {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}
