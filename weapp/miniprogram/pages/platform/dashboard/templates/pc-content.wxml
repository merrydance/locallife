<view class="pc-layout-wrapper" style="display: flex; gap: 32px; padding: 24px;">
  <!-- 左侧数据栏 -->
  <view class="left-pane" style="flex: 2;">
    <view class="card" style="background: #fff; padding: 32px; border-radius: 24rpx; box-shadow: 0 4px 20px rgba(0,0,0,0.05);">
      <view class="responsive-title" style="margin-bottom: 24px;">实时大盘数据</view>
      <t-grid border="{{false}}" class="responsive-grid-4">
        <t-grid-item text="活跃商户" description="{{realtimeData.realtime_stats.active_merchants || 0}}" icon="shop" />
        <t-grid-item text="在线骑手" description="{{realtimeData.realtime_stats.online_riders || 0}}" icon="user" />
        <t-grid-item text="待处理订单" description="{{realtimeData.realtime_stats.pending_orders || 0}}" icon="order" />
        <t-grid-item text="今日总GMV" description="¥{{realtimeData.today_stats.today_gmv / 100}}" icon="money-circle" />
      </t-grid>
    </view>
    
    <!-- 详情 Tabs -->
    <view style="margin-top: 24px;">
      <t-tabs defaultValue="{{activeTab}}" bind:change="onTabChange" theme="card">
         <t-tab-panel label="平台累计概览" value="overview">
            <include src="./stats-grid.wxml" />
         </t-tab-panel>
      </t-tabs>
    </view>
  </view>

  <!-- 右侧排行榜/快捷管理 -->
  <view class="right-pane" style="flex: 1;">
    <view class="card" style="background: #fff; padding: 24px; border-radius: 24rpx;">
      <view class="responsive-subtitle">快捷管理</view>
      <t-grid border="{{false}}" column="{{2}}">
         <t-grid-item text="商户审核" icon="shop" badge-props="{{ { count: pendingMerchants } }}" bind:click="onActionTap" data-url="/pages/platform/merchants/applications" />
         <t-grid-item text="骑手审核" icon="user" badge-props="{{ { count: pendingRiders } }}" bind:click="onActionTap" data-url="/pages/platform/riders/applications" />
      </t-grid>
    </view>
  </view>
</view>
