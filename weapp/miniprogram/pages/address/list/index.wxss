.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.address-list {
  padding-top: 20rpx;
}

.address-card {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content {
  flex: 1;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.action {
  padding-left: 24rpx;
  border-left: 1rpx solid #f0f0f0;
  margin-left: 24rpx;
}

.empty-state {
    padding-top: 100rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);
}
