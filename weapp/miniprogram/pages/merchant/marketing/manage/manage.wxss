/* 营销活动管理页面样式 */

.marketing-container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.main-content {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Tab导航 */
.marketing-tabs {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* Tab内容 */
.tab-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 操作栏 */
.action-bar {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 优惠券列表 */
.voucher-list,
.recharge-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.voucher-items,
.recharge-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 优惠券卡片 */
.voucher-card,
.recharge-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.voucher-info,
.recharge-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.voucher-name,
.recharge-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.voucher-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.bonus-rate {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
}

.card-body {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
}

.info-row .label {
  color: #666;
}

.info-row .value {
  color: #333;
  font-weight: 500;
}

.description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 会员设置 */
.membership-settings {
  padding: 20rpx;
}

/* 弹窗样式 */
.form-popup {
  width: 90%;
  max-width: 700rpx;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 空状态 */
t-empty {
  padding: 100rpx 0;
}
@media (min-width: 750px) {
  .voucher-items, .recharge-items {
    display: grid !important;
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 16px !important;
  }
  .voucher-card, .recharge-card {
    padding: 16px !important;
    border-radius: 8px !important;
  }
  .modal-content {
    max-width: 500px !important;
    margin: 0 auto !important;
  }
}

@media (min-width: 1280px) {
  .voucher-items, .recharge-items {
    grid-template-columns: repeat(3, 1fr) !important;
  }
}
