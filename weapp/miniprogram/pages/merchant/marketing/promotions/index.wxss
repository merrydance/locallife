.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.promotions-container {
  padding: 24rpx;
}

.empty {
  padding: 100rpx 0;
}

.promotions-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

@media (min-width: 750px) {
  .promotions-container {
    padding: 16px !important;
  }
  .promotions-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px !important;
  }
  .promo-card {
    padding: 16px !important;
    border-radius: 8px !important;
  }
}

@media (min-width: 1280px) {
  .promotions-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.promo-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.promo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.promo-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.promo-body {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  font-size: 24rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
  font-weight: 500;
}

.promo-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}
