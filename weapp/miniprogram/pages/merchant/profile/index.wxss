.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-top: 20rpx;
}

.time-range {
  display: flex;
  align-items: center;
}

.time-picker {
  padding: 0 12rpx;
  color: #333;
}

.separator {
  margin: 0 8rpx;
  color: #999;
}

.upload-row {
  background: #fff;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.footer {
  margin-top: 64rpx;
  padding: 0 32rpx;
}
@media (min-width: 750px) {
  .label {
    font-size: 16px !important;
  }
  .upload-row {
    padding: 16px !important;
  }
}
