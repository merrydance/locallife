/* 商户BI分析仪表盘样式 */

.analytics-container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.main-content {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 日期选择栏 */
.date-selector {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-range {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.separator {
  font-size: 28rpx;
  color: #666;
}

.quick-select {
  display: flex;
  gap: 16rpx;
}

/* Tab导航 */
.analytics-tabs {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* Tab内容 */
.tab-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 核心指标网格 */
.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.metric-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.metric-label {
  font-size: 26rpx;
  color: #666;
}

.metric-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.metric-growth {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 图表区域 */
.chart-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.chart-placeholder {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

/* 通用区块 */
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 热门菜品列表 */
.top-dishes-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dish-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.dish-rank {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.dish-sales {
  font-size: 24rpx;
  color: #666;
}

.dish-revenue {
  font-size: 32rpx;
  font-weight: bold;
  color: #52c41a;
}

/* 分类列表 */
.category-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.category-sales {
  font-size: 24rpx;
  color: #666;
}

.category-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.category-revenue {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.category-percentage {
  font-size: 24rpx;
  color: #1890ff;
}

/* 财务概览 */
.finance-overview {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 复购分析 */
.repurchase-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.repurchase-metrics {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.repurchase-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.repurchase-card .label {
  font-size: 26rpx;
  color: #666;
}

.repurchase-card .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
}

/* 客户列表 */
.customer-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.customer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.customer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.customer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.customer-orders {
  font-size: 24rpx;
  color: #666;
}

.customer-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.customer-spent {
  font-size: 32rpx;
  font-weight: bold;
  color: #52c41a;
}

.customer-avg {
  font-size: 24rpx;
  color: #666;
}
@media (min-width: 750px) {
  .tab-content {
    padding: 16px !important;
  }
  .metrics-grid {
    grid-template-columns: repeat(4, 1fr) !important;
    gap: 16px !important;
  }
  .metric-card, .chart-section, .section, .repurchase-section {
    padding: 16px !important;
    border-radius: 8px !important;
  }
  .metric-value {
    font-size: 28px !important;
  }
  .chart-placeholder {
    height: 350px !important;
  }
  .repurchase-metrics {
    grid-template-columns: repeat(4, 1fr) !important;
  }
}
