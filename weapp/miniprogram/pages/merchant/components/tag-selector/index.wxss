/* 标签选择器组件样式 */
/* 使用变量回退以兼容不同页面的变量定义 */

.tag-selector {
  width: 100%;
}

.selector-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 8px;
}

.selector-action {
  font-size: 13px;
  color: var(--primary, var(--saas-primary, #1890ff));
  cursor: pointer;
}

.selector-action:hover {
  text-decoration: underline;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 14px;
  background: #f5f5f5;
  border: 1px solid var(--border, var(--saas-border, #e8e8e8));
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.15s ease-out;
  user-select: none;
}

.tag-item:hover {
  border-color: var(--primary, var(--saas-primary, #1890ff));
  background: #f0f5ff;
}

.tag-item.selected {
  background: rgba(24, 144, 255, 0.1);
  border-color: var(--primary, var(--saas-primary, #1890ff));
  color: var(--primary, var(--saas-primary, #1890ff));
}

.tag-name {
  font-size: 13px;
}

.tag-check {
  font-size: 12px;
  font-weight: 600;
  color: var(--primary, var(--saas-primary, #1890ff));
}

.tags-empty {
  color: var(--text-muted, var(--saas-text-muted, #8c8c8c));
  font-size: 13px;
  padding: 12px 0;
}
