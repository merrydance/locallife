  color: var(--danger);
}

.group-options {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.option-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px 10px;
  background: white;
  border: 1px solid var(--border);
  border-radius: 4px;
}

.option-name {
  flex: 1;
  font-size: 13px;
}

.option-price-input {
  width: 70px;
  height: 28px;
  padding: 0 8px;
  border: 1px solid var(--border);
  border-radius: 4px;
  font-size: 13px;
  text-align: right;
}

.option-delete {
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: var(--text-muted);
  cursor: pointer;
}

.option-delete:hover {
  color: var(--danger);
}

.add-option-btn {
  padding: 8px;
  text-align: center;
  font-size: 13px;
  color: var(--primary);
  background: rgba(24, 144, 255, 0.05);
  border: 1px dashed var(--primary);
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.15s;
}

.add-option-btn:hover {
  background: rgba(24, 144, 255, 0.1);
}

.no-groups {
  padding: 20px;
  text-align: center;
  color: var(--text-muted);
  font-size: 13px;
}

