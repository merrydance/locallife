.option-picker-item:hover {
  background: rgba(24, 144, 255, 0.1);
}

.option-picker-name {
  font-size: 14px;
}

.empty-hint {
  display: block;
  margin-top: 8px;
  font-size: 12px;
  color: var(--text-muted);
}

