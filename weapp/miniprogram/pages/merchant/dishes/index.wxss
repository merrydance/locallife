.modal-panel.small {
  width: 360px;
  max-height: 400px;
}

.option-picker-list {
  display: flex;
  flex-direction: column;
  gap: 4px;
  max-height: 280px;
  overflow-y: auto;
}

.option-picker-item {
  padding: 12px;
  background: #fafafa;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.15s;
