  font-weight: 500;
  background: white;
}

.group-name-input:focus {
  border-color: var(--primary);
  outline: none;
}

.group-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.group-toggle {
  padding: 4px 10px;
  font-size: 12px;
