.container {
  background: #f5f5f5;
  min-height: 100vh;
}

.card {
  margin: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.card-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time {
  font-weight: bold;
  font-size: 30rpx;
}

.card-body {
  padding: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  color: #666;
  font-size: 28rpx;
}

.card-footer {
  padding: 16rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.empty-state {
    padding-top: 100rpx;
}
