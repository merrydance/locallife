@import "../../../styles/responsive.wxss";

.finance-container {
  min-height: 100vh;
  background: #f8fafc;
}

/* --- Mobile --- */
.mobile-finance-view {
  padding: 32rpx;
}

.balance-card {
  background: linear-gradient(135deg, #0052d9 0%, #003bab 100%);
  padding: 48rpx;
  border-radius: 24rpx;
  color: #fff;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 82, 217, 0.2);
}

.balance-card .label { font-size: 24rpx; opacity: 0.8; margin-bottom: 16rpx; }
.balance-card .value { font-size: 64rpx; font-weight: 800; margin-bottom: 32rpx; }
.withdraw-btn { background: rgba(255,255,255,0.2) !important; color: #fff !important; border: none !important; }

/* --- Desktop --- */
.desktop-finance-layout {
  display: grid;
  grid-template-columns: 360px 1fr;
  height: calc(100vh - 100px);
  overflow: hidden;
  background: #fff;
}

.finance-sidebar {
  border-right: 1rpx solid #f1f5f9;
  display: flex;
  flex-direction: column;
}

.account-overview {
  padding: 40rpx;
  background: #f8fafc;
  border-bottom: 1rpx solid #f1f5f9;
}

.sidebar-label { font-size: 24rpx; font-weight: 700; color: #94a3b8; text-transform: uppercase; margin-bottom: 24rpx; display: block; }

.overview-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; margin-bottom: 32rpx; }
.overview-item .l { font-size: 22rpx; color: #64748b; display: block; }
.overview-item .v { font-size: 32rpx; font-weight: 700; color: #1e293b; margin-top: 8rpx; display: block; }
.overview-item .v.highlight { color: #0052d9; }

.settlement-list-pane { flex: 1; padding: 32rpx; overflow: hidden; display: flex; flex-direction: column; }
.sidebar-scroll { flex: 1; margin-top: 16rpx; }

.settle-item-card {
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s;
  border: 1rpx solid transparent;
}

.settle-item-card.active {
  background: #eff6ff;
  border-color: #0052d9;
}

.card-row { display: flex; justify-content: space-between; align-items: center; }
.card-row .date { font-weight: 700; font-size: 28rpx; color: #1e293b; }
.card-row .amt { font-weight: 700; color: #0052d9; }
.card-row.bottom { margin-top: 12rpx; }
.card-row.bottom .count { font-size: 22rpx; color: #94a3b8; }

/* --- Detail Area --- */
.finance-detail-area { background: #f8fafc; padding: 48rpx; overflow-y: auto; }

.detail-empty { display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%; color: #cbd5e1; gap: 24rpx; }

.detail-hero { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 48rpx; }
.hero-title { font-size: 44rpx; font-weight: 800; color: #0f172a; display: block; }
.hero-id { font-size: 24rpx; color: #94a3b8; margin-top: 8rpx; display: block; }

.stats-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 32rpx; margin-bottom: 48rpx; }
.stat-card { background: #fff; padding: 32rpx; border-radius: 20rpx; box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.02); }
.stat-card.highlight { background: #0052d9; color: #fff; }
.stat-card .l { font-size: 24rpx; color: #64748b; margin-bottom: 16rpx; display: block; }
.stat-card.highlight .l { color: rgba(255,255,255,0.7); }
.stat-card .v { font-size: 40rpx; font-weight: 800; }
.stat-card .v.negative { color: #e34d59; }

.order-list-card { background: #fff; padding: 48rpx; border-radius: 24rpx; }
.card-title { font-size: 30rpx; font-weight: 700; color: #0f172a; margin-bottom: 32rpx; display: block; }

.detail-table { width: 100%; }
.tr { display: flex; padding: 24rpx 0; border-bottom: 1rpx solid #f1f5f9; }
.tr.th { border-bottom: 2rpx solid #e2e8f0; font-size: 22rpx; color: #94a3b8; }

.td-time { flex: 1; font-size: 24rpx; }
.td-type { flex: 1; font-size: 24rpx; }
.td-order { flex: 2; font-size: 24rpx; color: #64748b; }
.td-amt { flex: 1; text-align: right; font-weight: 700; color: #0052d9; }

/* PC-Full 增强 */
@media (min-width: 1600px) {
  .desktop-finance-layout {
    grid-template-columns: 420px 1fr;
    max-width: 1540px;
    margin: 32px auto;
    border-radius: 24rpx;
    box-shadow: 0 20px 60rpx rgba(0,0,0,0.05);
  }
}
