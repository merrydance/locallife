<import src="./shared-templates.wxml" />
<!-- PC-Window: 宽屏双栏布局 (1280px ~ 1599px) -->
<view class="pc-window-dashboard">
  <view class="pc-header">
    <text class="pc-merchant-name">{{merchantName}} · 工作台</text>
    <t-tag theme="{{isOpen ? 'success' : 'default'}}" variant="light">{{isOpen ? '公开营业' : '暂停中'}}</t-tag>
  </view>

  <view class="pc-content-dual">
    <!-- 左：核心列表 -->
    <view class="pc-pane">
      <t-tabs defaultValue="orders" theme="card">
         <t-tab-panel label="实时订单" value="orders">
            <template is="order-view" data="{{pendingOrders}}" />
         </t-tab-panel>
         <t-tab-panel label="桌台全览" value="tables">
            <template is="table-view" data="{{tableGroups}}" />
         </t-tab-panel>
      </t-tabs>
    </view>

    <!-- 右：管理面板 -->
    <view class="pc-pane management-sidebar">
      <view class="pane-header">管理功能</view>
      <scroll-view scroll-y class="pane-body">
         <include src="./management-grid.wxml" />
      </scroll-view>
    </view>
  </view>
</view>
