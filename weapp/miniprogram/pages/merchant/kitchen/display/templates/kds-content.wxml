<!-- 中等屏幕KDS引导页面 -->
<view class="kds-medium-screen">
  <view class="kds-guidance">
    <t-icon name="desktop" size="80px" color="#1890ff" />
    <text class="guidance-title">后厨显示系统</text>
    <text class="guidance-desc">为获得最佳体验，建议使用 1600px 以上的显示器</text>
    <text class="guidance-desc">或点击下方按钮进入简化模式</text>
    <view class="guidance-actions">
      <t-button theme="primary" size="large" bindtap="enterSimpleMode">进入简化模式</t-button>
      <t-button variant="outline" size="large" bindtap="onBack">返回工作台</t-button>
    </view>
  </view>
</view>
