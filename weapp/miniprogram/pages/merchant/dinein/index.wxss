.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.content {
  padding: 24rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.tables-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

@media (min-width: 750px) {
  .responsive-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 16px;
  }

  .dual-column-layout {
    display: flex;
    gap: 20px;
    padding-top: 16px;
  }

  .left-section {
    flex: 2;
    background: #fff;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
  }

  .right-section {
    flex: 1;
    background: #fff;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
    min-height: 600px;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .pc-grid {
    grid-template-columns: repeat(4, 1fr) !important;
    gap: 16px !important;
  }

  .stats-summary {
    font-size: 14px;
    color: #666;
  }

  .stats-summary .available { color: #00A870; font-weight: bold; }
  .stats-summary .occupied { color: #EBB105; font-weight: bold; }

  /* Asset & Typography Stabilization Caps */
  .table-name {
    font-size: 16px !important;
  }
  .table-capacity {
    font-size: 13px !important;
  }
  .total-price {
    font-size: 18px !important;
  }
  .section-title {
    font-size: 16px !important;
  }
  .info-text {
    font-size: 13px !important;
  }
}

@media (min-width: 1280px) {
  .pc-grid {
    grid-template-columns: repeat(6, 1fr) !important;
  }
}

.table-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.table-card.occupied {
  background: #FFF7E6;
}

.table-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.table-capacity {
  font-size: 22rpx;
  color: #666;
}

.action-btn {
  margin-top: 8rpx;
  width: 100%;
}

.sessions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.session-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.session-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.info-text {
  font-size: 24rpx;
  color: #666;
}

.session-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #E34D59;
}

.empty {
  padding: 60rpx 0;
}
