.container {
  background: #fff;
  min-height: 100vh;
}

.review-item {
  padding: 0 32rpx;
  position: relative;
}

.actions {
    display: flex;
    justify-content: flex-end;
    padding-bottom: 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.empty-state {
    padding-top: 100rpx;
}
@media (min-width: 750px) {
  .review-item {
    padding: 0 16px !important;
  }
}
