.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 48rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.status-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 24rpx;
  color: #333;
}

.status-desc {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

.actions {
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
