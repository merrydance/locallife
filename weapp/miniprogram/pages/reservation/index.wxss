/* Pages/Reservation/Index.wxss */

/* PC 端提示样式 */
.pc-notice-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b58 0%, #ff8a6b 100%);
  padding: 40px;
}

.pc-notice-card {
  background: white;
  padding: 60px 80px;
  border-radius: 24px;
  text-align: center;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
}

.pc-notice-icon {
  font-size: 64px;
  display: block;
}

.pc-notice-title {
  font-size: 24px;
  font-weight: 600;
  color: #333;
  display: block;
}

.pc-notice-desc {
  font-size: 16px;
  color: #666;
  display: block;
}

.pc-notice-hint {
  font-size: 14px;
  color: #999;
  display: block;
  margin-top: 8px;
}

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-direction: column;
}

/* ================== Top Bar ================== */
.top-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.filter-btn-new {
  margin-right: 24rpx; /* Increased from 16rpx */
  flex-shrink: 0;
  /* Allow button to size itself based on content */
}


.search-box {
  flex: 1;
}

/* ================== Tabs ================== */
.tabs-section {
  background: #fff;
  padding-bottom: 8rpx;
  position: sticky;
  top: 96rpx; /* Height of top bar approx */
  z-index: 99;
}

/* ================== Listings ================== */
.listings {
  flex: 1;
  padding: 24rpx;
}

.list-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.skeleton-container {
  padding: 24rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 32rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* ================== Filter Drawer ================== */
.filter-drawer {
  width: 600rpx; /* Side drawer width */
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.drawer-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: bold;
}

.drawer-content {
  flex: 1;
  padding: 24rpx;
}

.filter-group {
  margin-bottom: 48rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333;
}

.picker-trigger {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.drawer-footer {
  padding: 24rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 24rpx;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

/* ================== Large Screen Sizing Lock ================== */
/* 仅锁定尺寸，不改变布局结构 */
@media (min-width: 750px) {
  .top-bar {
    padding: 8px 16px !important;
  }
  
  .tabs-section {
    padding: 0 16px !important;
  }

  .listings {
    padding: 16px !important;
  }

  .list-container {
    /* 保持单列布局，不使用grid */
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .loading-more, .no-more {
    font-size: 14px !important;
    padding: 16px 0 !important;
  }

  .drawer-header .drawer-title {
    font-size: 16px !important;
  }
  
  .group-title {
    font-size: 14px !important;
  }
  
  .filter-drawer {
    width: 280px !important;
  }
}
