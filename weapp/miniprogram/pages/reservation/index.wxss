/* 预订页面 */

/* Skyline 滚动容器 */
.page-scroll {
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  gap: 16rpx;
}

.filter-btn-new {
  flex-shrink: 0;
}

.search-box {
  flex: 1;
}

/* Tabs Section */
.tabs-section {
  background: #fff;
  margin-bottom: 16rpx;
}

/* Listings */
.listings {
  padding: 0 24rpx 24rpx;
}

.skeleton-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.list-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.loading-more {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* Filter Drawer */
.filter-drawer {
  width: 600rpx;
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.drawer-content {
  flex: 1;
  padding: 24rpx;
}

.filter-group {
  margin-bottom: 32rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.drawer-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.drawer-footer .t-button {
  flex: 1;
}
