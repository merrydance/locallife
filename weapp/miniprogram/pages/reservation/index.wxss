/* Pages/Reservation/Index.wxss */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-direction: column;
}

/* ================== Top Bar ================== */
.top-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.filter-btn-new {
  margin-right: 24rpx; /* Increased from 16rpx */
  flex-shrink: 0;
  /* Allow button to size itself based on content */
}


.search-box {
  flex: 1;
}

/* ================== Tabs ================== */
.tabs-section {
  background: #fff;
  padding-bottom: 8rpx;
  position: sticky;
  top: 96rpx; /* Height of top bar approx */
  z-index: 99;
}

/* ================== Listings ================== */
.listings {
  flex: 1;
  padding: 24rpx;
}

.list-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.skeleton-container {
  padding: 24rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 32rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* ================== Filter Drawer ================== */
.filter-drawer {
  width: 600rpx; /* Side drawer width */
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.drawer-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: bold;
}

.drawer-content {
  flex: 1;
  padding: 24rpx;
}

.filter-group {
  margin-bottom: 48rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333;
}

.picker-trigger {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.drawer-footer {
  padding: 24rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 24rpx;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

/* ================== Large Screen Adaptation ================== */
@media (min-width: 750px) {
  .top-bar {
    padding: 0 32px !important;
    height: 64px !important;
    display: flex;
    align-items: center;
    position: sticky;
    top: 64px !important; /* Stick below Navbar */
    z-index: 101;
    background: #fff;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
    border-radius: 8px; /* Subtle radius */
    left: 0;
    right: 0;
  }
  
  .filter-btn-new {
    margin-right: 24px !important; /* Restore natural margin */
  }

  .search-box {
    flex: 1; /* Allow it to grow naturally up to a point */
    max-width: 800px; /* More generous cap */
  }

  .tabs-section {
    padding: 0 32px !important;
    height: 48px !important;
    position: sticky;
    top: 128px !important; /* Below Navbar + Topbar */
    z-index: 100;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    left: 0;
    right: 0;
  }

  .listings {
    padding: 24px 32px !important;
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
  }

  .list-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .drawer-header .drawer-title {
    font-size: 18px !important;
  }
  
  .group-title {
    font-size: 14px !important;
  }
}

@media (min-width: 1280px) {
  .list-container {
    grid-template-columns: repeat(3, 1fr);
  }
}
