.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.address-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.address-content {
  flex: 1;
}

.address-header {
  display: flex;
  gap: 24rpx;
  margin-bottom: 8rpx;
}

.address-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.address-empty {
  flex: 1;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.address-arrow {
  font-size: 48rpx;
  color: #999;
}

.delivery-section,
.items-section,
.remark-section,
.cost-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.delivery-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.delivery-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.item-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.item-row:last-child {
  border-bottom: none;
}

.item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-shop {
  font-size: 22rpx;
  color: #999;
}

.item-quantity {
  font-size: 24rpx;
  color: #666;
}

.item-price {
  font-size: 28rpx;
  color: #E34D59;
  font-weight: bold;
}

.remark-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #F6F6F6;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.cost-row.total {
  border-top: 1rpx solid #F0F0F0;
  margin-top: 8rpx;
  padding-top: 24rpx;
}

.cost-label {
  font-size: 28rpx;
  color: #666;
}

.cost-row.total .cost-label {
  font-weight: bold;
  color: #333;
}

.cost-value {
  font-size: 28rpx;
  color: #333;
}

.cost-row.total .cost-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #E34D59;
}

.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.08);
}

.submit-info {
  flex: 1;
}

.submit-label {
  font-size: 24rpx;
  color: #666;
}

.submit-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #E34D59;
  margin-left: 8rpx;
}

.submit-btn {
  width: 240rpx;
}
