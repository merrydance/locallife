@import '../../styles/responsive.wxss';

/* PC 端提示样式 */
.pc-notice-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b58 0%, #ff8a6b 100%);
  padding: 40px;
}

.pc-notice-card {
  background: white;
  padding: 60px 80px;
  border-radius: 24px;
  text-align: center;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
}

.pc-notice-icon {
  font-size: 64px;
  display: block;
}

.pc-notice-title {
  font-size: 24px;
  font-weight: 600;
  color: #333;
  display: block;
}

.pc-notice-desc {
  font-size: 16px;
  color: #666;
  display: block;
}

.pc-notice-hint {
  font-size: 14px;
  color: #999;
  display: block;
  margin-top: 8px;
}

/* 外卖首页 - 基于color_guide.md配色 */
/* 注意：顾客端统一使用手机设计，大屏通过 customer-page-container 锁定宽度 */

/* ========== 页面容器 (60% 陶瓷白背景) ========== */
.page-container {
  background: var(--td-bg-color-page);  /* #FAFAFA 陶瓷白 */
}

/* ========== 搜索区域 ========== */
.search-section {
  padding: 24rpx;
  background: var(--td-bg-color-container);  /* 纯白卡片 */
}

/* ========== Tabs区域 ========== */
.tabs-section {
  background: var(--td-bg-color-container);
  margin-bottom: 16rpx;
}

/* ========== 分类导航 ========== */
.category-section {
  background: var(--td-bg-color-container);
  margin-bottom: 16rpx;
}

/* ========== 内容区域 ========== */
.content-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 24rpx 24rpx;
}

/* ========== 骨架屏 ========== */
.skeleton-card {
  margin: 20rpx;
  padding: 20rpx;
  background: var(--td-bg-color-container);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

/* ========== 套餐卡片 ========== */
.package-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: var(--td-bg-color-container);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
}

.package-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.package-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;  /* 关键：允许flex子项收缩 */
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.package-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);  /* #333 炭黑 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;  /* 单行显示 */
  min-width: 0;  /* 允许收缩 */
}

/* 30% 品牌主色 - 价格使用活力珊瑚 */
.package-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--brand-coral);  /* #FF6B58 活力珊瑚 */
  flex-shrink: 0;  /* 防止价格被压缩 */
  white-space: nowrap;
}

.package-original-price {
  font-size: 22rpx;
  color: var(--td-text-color-placeholder);  /* #999 */
  text-decoration: line-through;
}

.package-desc {
  font-size: 24rpx;
  color: var(--td-text-color-secondary);  /* #666 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 8rpx;
}

.package-footer {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 12rpx;
}

.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: var(--td-text-color-placeholder);
  font-size: 28rpx;
}


/* ========== 位置引导提示 ========== */
.location-guide {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.location-guide-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.location-guide-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
  margin-bottom: 16rpx;
}

.location-guide-desc {
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.location-guide-buttons {
  display: flex;
  gap: 24rpx;
}

.location-guide-buttons .t-button {
  min-width: 180rpx;
}
