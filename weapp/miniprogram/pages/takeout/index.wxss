/* 外卖首页 */

/* Skyline 滚动容器 */
.page-scroll {
  background: #FAFAFA;
  box-sizing: border-box;
}

/* ========== 搜索区域 ========== */
.search-section {
  padding: 24rpx;
  background: #fff;
}

/* ========== Tabs区域 ========== */
.tabs-section {
  background: #fff;
  margin-bottom: 16rpx;
}

/* ========== 分类导航 ========== */
.category-section {
  background: #fff;
  margin-bottom: 16rpx;
}

/* ========== 内容区域 ========== */
.content-section {
  display: flex;
  flex-direction: column;
  padding: 12rpx 20rpx 24rpx;
}

/* ========== 套餐卡片 ========== */
.package-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.package-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.package-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.package-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 0;
}

.package-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B58;
  flex-shrink: 0;
  white-space: nowrap;
}

.package-original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.package-desc {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 8rpx;
}

.package-footer {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 12rpx;
}

.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* ========== 位置引导提示 ========== */
.location-guide {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.location-guide-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.location-guide-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.location-guide-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.location-guide-buttons {
  display: flex;
  gap: 24rpx;
}

.location-guide-buttons .t-button {
  min-width: 180rpx;
}
