.page-container {
  min-height: 100vh;
  background: #F6F6F6;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 200rpx 0;
}

/* 头图 - 固定定位 */
.header-section {
  position: fixed;
  left: 0;
  right: 0;
  height: 400rpx;
  background-size: cover;
  background-position: center;
  z-index: 10;
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0.6) 50%, rgba(0,0,0,0.3) 80%, transparent 100%);
  color: #fff;
}

.restaurant-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.5);
}

.restaurant-meta {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.5);
}

.restaurant-service {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.5);
}

.service-count {
  color: #ffeb3b;
  font-weight: 500;
  background: rgba(0,0,0,0.3);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.delivery-time {
  color: #fff;
  background: rgba(0,0,0,0.3);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.trust-score {
  color: #4CAF50;
  font-weight: 500;
  background: rgba(0,0,0,0.3);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.restaurant-tags {
  display: flex;
  gap: 8rpx;
}

/* Tab切换 - 固定定位 */
.tabs-section {
  position: fixed;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 内容区域 - 固定定位，内部滚动 */
.content-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(140rpx + env(safe-area-inset-bottom)); /* 购物车栏高度 + 安全区 */
  background: #F6F6F6;
  overflow: hidden;
}

.dishes-tab {
  height: 100%;
  background: #fff;
}

.dishes-container {
  display: flex;
  height: 100%;
}


.category-sidebar {
  width: 180rpx;
  background: #F6F6F6;
  flex-shrink: 0;
}

.category-item {
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-left: 4rpx solid transparent;
}

.category-item.active {
  background: #fff;
  color: #0052D9;
  border-left-color: #0052D9;
  font-weight: bold;
}

.dishes-list {
  flex: 1;
  padding: 24rpx;
}

.dish-item {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.dish-meta {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
  color: #666;
}

.dish-price {
  font-size: 28rpx;
  color: #E34D59;
  font-weight: bold;
}

.add-btn {
  align-self: flex-end;
}

.combos-tab,
.info-tab {
  height: 100%;
  background: #fff;
  padding: 24rpx;
  box-sizing: border-box;
}


.info-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.info-value.call {
  color: #0052D9;
}

/* cart-bar 组件样式由组件自身管理，此处已无需定义 */


/* ========== 新增样式 ========== */

/* 送达时间 */
.delivery-time {
  margin-left: 16rpx;
}

/* 菜品标签行 */
.dish-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-bottom: 4rpx;
}

/* 菜品价格行 */
.dish-price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.dish-original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

/* 空分类提示 */
.empty-category {
  padding: 48rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* ========== 套餐Tab样式 ========== */
.combos-tab {
  background: #fff;
  padding: 24rpx;
  min-height: 400rpx;
}

.combo-item {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.combo-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.combo-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.combo-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.combo-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.combo-price-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-top: auto;
}

.combo-price {
  font-size: 32rpx;
  color: #E34D59;
  font-weight: bold;
}

.combo-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.combo-discount {
  font-size: 22rpx;
  color: #fff;
  background: #E34D59;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-left: 8rpx;
}

/* 套餐包含菜品列表 */
.combo-dishes-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin: 8rpx 0;
}

.combo-dish-item {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.combo-dish-name {
  color: #666;
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.combo-dish-qty {
  color: #E34D59;
  margin-left: 4rpx;
}

/* ========== 包间Tab样式 ========== */
.rooms-tab {
  background: #fff;
  padding: 24rpx;
  min-height: 400rpx;
}

.room-item {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.room-item:last-child {
  border-bottom: none;
}

.room-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.room-image-placeholder {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  background: #f5f5f5;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.room-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.room-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.room-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.room-capacity {
  color: #666;
}

.room-sales {
  color: #999;
}

.room-price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-top: auto;
}

.room-price-label {
  font-size: 24rpx;
  color: #666;
}

.room-price {
  font-size: 32rpx;
  color: #E34D59;
  font-weight: bold;
}

.no-license {
  color: #999;
  font-size: 24rpx;
  padding: 24rpx;
}

/* ========== 评价Tab样式 ========== */
.reviews-tab {
  background: #fff;
  padding: 24rpx;
  min-height: 400rpx;
}

.review-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.review-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.review-date {
  font-size: 24rpx;
  color: #999;
}

.review-rating {
  margin-bottom: 8rpx;
}

.star {
  font-size: 24rpx;
  color: #DDD;
}

.star.active {
  color: #FFD700;
}

.review-dish {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.review-images {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.review-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

/* ========== 商家Tab样式 ========== */
.info-tab {
  background: #F6F6F6;
  padding: 0;
  min-height: 400rpx;
}

.info-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.info-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  max-width: 60%;
  text-align: right;
}

.info-value.open {
  color: #00A870;
}

.info-value.closed {
  color: #E34D59;
}

.info-value.highlight {
  color: #E34D59;
}

.info-value.call {
  color: #0052D9;
}

/* 资质图片 */
.license-images {
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
}

.license-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.license-image {
  width: 280rpx;
  height: 200rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  background-color: #f5f5f5;
}

.license-name {
  font-size: 24rpx;
  color: #666;
}

.info-value.license {
  font-size: 24rpx;
  color: #999;
}

/* 营业时间列表 */
.hours-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hour-line {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}

.hour-line.closed {
  color: #999;
}

/* 优惠活动 */
.promotions-section {
  padding-bottom: 32rpx;
}

.promotion-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.promo-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.promo-tag {
  flex-shrink: 0;
}

.promo-text {
  font-size: 26rpx;
  color: #333;
}
