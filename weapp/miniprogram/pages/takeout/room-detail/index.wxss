/* 包间详情页样式 */
page {
  background: #f5f5f5;
}

.container {
  padding-bottom: 120rpx;
}

/* 图片轮播 */
.room-swiper {
  width: 100%;
  height: 500rpx;
}

.room-image {
  width: 100%;
  height: 100%;
}

/* 基本信息 */
.info-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.room-header {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.room-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.room-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.room-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 32rpx;
  padding: 24rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.meta-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #999;
}

.meta-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.meta-value.price {
  color: #E34D59;
}

.room-desc {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 商户信息 */
.merchant-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.merchant-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.merchant-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.merchant-address {
  font-size: 24rpx;
  color: #999;
}

.merchant-actions {
  display: flex;
  gap: 16rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 32rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
