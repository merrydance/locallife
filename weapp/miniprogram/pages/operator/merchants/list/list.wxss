.merchants-list {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.search-bar {
  padding: 24rpx 32rpx;
  background: white;
}

.filter-tabs {
  background: white;
  border-bottom: 1px solid #eee;
}

.merchants-scroll {
  flex: 1;
  padding: 24rpx 32rpx;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.merchants-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.merchant-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.merchant-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.merchant-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.merchant-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-text {
  font-size: 28rpx;
  color: #faad14;
  font-weight: bold;
}

.merchant-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #666;
}

.merchant-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.merchant-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.loading-more,
.no-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

.dialog-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
