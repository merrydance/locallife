@import '/styles/responsive.wxss';

.operator-dashboard {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 平板适配 */
@media (min-width: 750px) {
  .operator-dashboard {
    padding: 48rpx;
  }
}

/* 桌面适配 */
@media (min-width: 1280px) {
  .operator-dashboard {
    max-width: 1920rpx;
    margin: 0 auto;
    padding: 64rpx;
  }
}

.dashboard-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 运营商信息卡片 */
.info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  color: white;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-name {
  font-size: 36rpx;
  font-weight: bold;
}

.info-details {
  display: flex;
  gap: 32rpx;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 财务概览卡片 */
.finance-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.finance-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.finance-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.finance-label {
  font-size: 24rpx;
  color: #999;
}

.finance-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.finance-value.primary {
  color: #1890ff;
}

.finance-value.warning {
  color: #faad14;
}

.finance-value.success {
  color: #52c41a;
}

/* 区域选择器 */
.region-selector {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selector-label {
  font-size: 28rpx;
  color: #666;
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #333;
}

/* 数据概览网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

/* 平板适配 */
@media (min-width: 750px) {
  .stats-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 32rpx;
  }
}

/* 桌面适配 */
@media (min-width: 1280px) {
  .stats-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 40rpx;
  }
}

.stat-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
}

.stat-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.stat-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-value.success {
  color: #52c41a;
}

.stat-value.warning {
  color: #faad14;
}

/* 快捷操作 */
.quick-actions {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

/* 平板适配 */
@media (min-width: 750px) {
  .action-grid {
    grid-template-columns: repeat(5, 1fr);
    gap: 32rpx;
  }
}

/* 桌面适配 */
@media (min-width: 1280px) {
  .action-grid {
    grid-template-columns: repeat(6, 1fr);
    gap: 40rpx;
  }
  
  .action-item {
    padding: 32rpx;
  }
  
  .action-label {
    font-size: 28rpx;
  }
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.action-label {
  font-size: 24rpx;
  color: #666;
}
