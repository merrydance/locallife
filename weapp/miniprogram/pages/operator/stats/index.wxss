.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  padding-left: 12rpx;
  border-left: 8rpx solid #0052d9;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.card {
  background: #fff;
  padding: 32rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.chart-box {
  background: #fff;
  border-radius: 12rpx;
  padding: 48rpx;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
