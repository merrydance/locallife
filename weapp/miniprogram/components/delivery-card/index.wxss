.delivery-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
}

.task-id {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.tag.blue { background: #E6F7FF; color: #0052D9; }
.tag.green { background: #E6FFFB; color: #00C777; }

.income {
  font-size: 40rpx;
  font-weight: bold;
  color: #fa4126;
  font-family: 'DIN Alternate', sans-serif;
}

.route-info {
  margin-bottom: 48rpx;
}

.route-node {
  display: flex;
  align-items: flex-start;
}

.node-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.node-icon.start { background: #0052D9; }
.node-icon.end { background: #00C777; }

.node-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.address {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.sub-address {
  font-size: 28rpx;
  color: #666;
}

.node-action {
  padding: 16rpx;
}

.phone-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
}

.route-line {
  width: 2rpx;
  height: 40rpx;
  background: #ddd;
  margin-left: 23rpx; /* Center with icon (48/2 - 1) */
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.action-area {
  margin-top: 24rpx;
}

.big-btn {
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 60rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.2);
}

.btn-blue { background: linear-gradient(135deg, #0052D9, #0077FA); }
.btn-green { background: linear-gradient(135deg, #00C777, #00E68E); }

.btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}
