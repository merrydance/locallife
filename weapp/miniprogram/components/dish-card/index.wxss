/* 菜品卡片 */
.dish-card {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.dish-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.dish-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.row-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.shop-dish-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.row-2 {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
}

.price {
  font-weight: bold;
  color: #FF6B58;
}

.separator {
  color: #999;
  margin: 0 4rpx;
}

.sales {
  color: #666;
  font-size: 24rpx;
}

.row-3 {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 22rpx;
  color: #666;
}

.distance, .delivery-time {
  color: #666;
  font-size: 22rpx;
}

.row-4 {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
  font-size: 22rpx;
}

.delivery-fee {
  font-size: 22rpx;
  color: #666;
  padding: 2rpx 10rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.discount {
  font-size: 22rpx;
  color: #ff6b58;
  padding: 2rpx 10rpx;
  background: #fff5f4;
  border-radius: 4rpx;
}

.row-5 {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-top: 4rpx;
}

.add-btn {
  align-self: flex-end;
  transition: transform 0.2s ease;
}

.add-btn:active {
  transform: scale(0.9);
  animation: pulse 0.3s ease;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}
