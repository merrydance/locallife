/* 商户 PC 端顶部工具栏样式 */

.header {
  height: 56px;
  background: #ffffff;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24px;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 999;
  transition: left 0.2s ease;
}

/* 左侧区域 */
.header-left {
  display: flex;
  align-items: center;
  gap: 16px;
}

.merchant-name {
  font-size: 18px;
  font-weight: 600;
  color: #262626;
}

/* 营业状态徽章 */
.status-badge {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 4px 12px;
  border-radius: 16px;
  cursor: pointer;
  transition: all 0.2s;
}

.status-badge.open {
  background: #f6ffed;
  border: 1px solid #b7eb8f;
}

.status-badge.closed {
  background: #f5f5f5;
  border: 1px solid #d9d9d9;
}

.status-badge:hover {
  opacity: 0.85;
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
}

.status-badge.open .status-dot {
  background: #52c41a;
}

.status-badge.closed .status-dot {
  background: #8c8c8c;
}

.status-text {
  font-size: 13px;
  color: #595959;
}

.status-arrow {
  width: 12px;
  height: 12px;
  opacity: 0.5;
}

/* 右侧区域 */
.header-right {
  display: flex;
  align-items: center;
  gap: 20px;
}

.today-date {
  font-size: 14px;
  color: #8c8c8c;
}

/* 通知按钮 */
.notification-btn {
  position: relative;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  cursor: pointer;
  transition: background 0.2s;
}

.notification-btn:hover {
  background: #f5f5f5;
}

.bell-icon {
  width: 20px;
  height: 20px;
  opacity: 0.65;
}

.notification-badge {
  position: absolute;
  top: 2px;
  right: 2px;
  min-width: 16px;
  height: 16px;
  line-height: 16px;
  text-align: center;
  font-size: 10px;
  font-weight: 600;
  background: #ff4d4f;
  color: #fff;
  border-radius: 8px;
  padding: 0 4px;
}

/* 用户菜单 */
.user-menu {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 12px;
  border-radius: 20px;
  cursor: pointer;
  transition: background 0.2s;
}

.user-menu:hover {
  background: #f5f5f5;
}

.user-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1px solid #e8e8e8;
}

.user-name {
  font-size: 14px;
  color: #262626;
  max-width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-arrow {
  width: 12px;
  height: 12px;
  opacity: 0.5;
}
