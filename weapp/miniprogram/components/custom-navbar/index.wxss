/* 自定义导航栏 - 30% 品牌主色 (活力珊瑚渐变) */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  /* 使用"晨曦"微渐变 - 让导航栏更有质感 */
  background: linear-gradient(135deg, #FF8A75 0%, #FF6B58 100%);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.status-bar {
  width: 100%;
}

.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.nav-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.back-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.35);
  transition: background-color 0.3s;
}

.back-button:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.back-icon {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.87);
  font-weight: bold;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
}

.location-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  max-width: 200rpx;
  overflow: hidden;
}

/* 移除位置图标,只显示文字 */
.location-icon {
  display: none;
}

.location-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.87);  /* 87%透明度白色 */
  white-space: nowrap;
}

.location-text.scroll {
  animation: scroll-text 8s linear infinite;
}

@keyframes scroll-text {
  0% { transform: translateX(0); }
  50% { transform: translateX(-50%); }
  100% { transform: translateX(0); }
}

.nav-center {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.87);  /* 87%透明度白色 */
}

.nav-right {
  flex-shrink: 0;
}

/* ==================== 大屏适配锁定 (防止过度缩放) ==================== */
@media (min-width: 750px) {
  .nav-bar {
    padding: 0 16px !important;
  }
  
  .back-button {
    width: 32px !important;
    height: 32px !important;
  }
  
  .back-icon {
    font-size: 24px !important;
    width: 32px !important;
    height: 32px !important;
    line-height: 32px !important;
  }
  
  .nav-title {
    font-size: 16px !important;
  }
  
  .location-text {
    font-size: 13px !important;
  }
}
