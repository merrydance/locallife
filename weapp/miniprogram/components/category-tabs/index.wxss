.category-tabs {
  white-space: nowrap;
  height: 88rpx;
  background: var(--td-bg-color-container);
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid var(--td-component-stroke-color, #f0f0f0);
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 100%;
  position: relative;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.tab-item.active {
  color: #0052D9;
  font-weight: 600;
  font-size: 30rpx;
}

.active-line {
  position: absolute;
  bottom: 12rpx;
  width: 40rpx;
  height: 6rpx;
  background: #0052D9;
  border-radius: 3rpx;
}

/* PC 端尺寸锁定 - 保持视觉一致性 */
@media (min-width: 750px) {
  .category-tabs {
    height: 44px !important;
    padding: 0 16px !important;
  }
  .tab-item {
    font-size: 13px !important;
    padding: 0 12px !important;
  }
  .tab-item.active {
    font-size: 13px !important;
  }
  .active-line {
    bottom: 8px !important;
    width: 20px !important;
    height: 3px !important;
  }
}
