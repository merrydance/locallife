<view class="cart-bar-placeholder" wx:if="{{totalCount > 0}}"></view>
<view class="cart-bar {{totalCount > 0 ? 'show' : ''}}">
  <view class="cart-icon-wrapper" bindtap="onCartClick">
    <image class="cart-icon" src="/assets/tabbar/takeout_active.png" /> <!-- Temporary Icon -->
    <view class="badge" wx:if="{{totalCount > 0}}">{{totalCount}}</view>
  </view>
  
  <view class="cart-info" bindtap="onCartClick">
    <view class="price-info">
      <text class="currency">¥</text>
      <text class="total-price">{{totalPrice / 100}}</text>
    </view>
    <view class="delivery-tip">预估配送费 ¥0</view>
  </view>
  
  <view class="checkout-btn {{totalCount > 0 ? 'active' : ''}}" bindtap="onCheckout">
    去结算
  </view>
</view>
