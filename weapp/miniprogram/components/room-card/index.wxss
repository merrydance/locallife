.room-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.room-image {
  width: 240rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.room-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.row-1 {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.restaurant-room-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #E34D59;
  flex-shrink: 0;
}

.row-2, .row-3, .row-4, .row-5, .row-6 {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.row-2 {
  font-size: 24rpx;
  color: #666;
}

.row-3 {
  font-size: 22rpx;
}

.row-4, .row-5, .row-6 {
  font-size: 22rpx;
  color: #666;
}

.row-5 {
  color: #999;
}

.dot {
  color: #999;
}

.rating {
  color: #FF9500;
  font-weight: 500;
}

.address {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

@media (min-width: 750px) {
  .room-card {
    gap: 16px !important;
    padding: 16px !important;
    border-radius: 12px !important;
    margin-bottom: 0 !important; /* Grid handles spacing */
  }
  .room-image {
    width: 120px !important;
    height: 100px !important;
    border-radius: 8px !important;
  }
  .restaurant-room-name {
    font-size: 16px !important;
  }
  .price {
    font-size: 18px !important;
  }
  .row-2 {
    font-size: 13px !important;
  }
  .row-3, .row-4, .row-5, .row-6 {
    font-size: 12px !important;
  }
}
