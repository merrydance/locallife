.restaurant-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.restaurant-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.restaurant-image {
  width: 240rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.restaurant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.row-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.restaurant-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rating {
  font-size: 24rpx;
  color: #FFC107;
  font-weight: 500;
  flex-shrink: 0;
}

.row-2 {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.cuisine {
  color: #666;
}

.avg-price {
  font-weight: bold;
  color: #FF6B58;
}

.separator {
  color: #999;
  margin: 0 4rpx;
}

.distance {
  font-size: 24rpx;
}

.row-3 {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
  font-size: 22rpx;
}

.rooms {
  color: #00897B;
  font-size: 22rpx;
  font-weight: 500;
}
