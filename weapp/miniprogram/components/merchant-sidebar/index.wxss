/* 商户 PC 端侧边栏导航样式 */

/* 变量定义 */
.sidebar {
  --sidebar-width: 200px;
  --sidebar-collapsed-width: 64px;
  --sidebar-bg: #001529;
  --sidebar-text: rgba(255, 255, 255, 0.65);
  --sidebar-text-active: #ffffff;
  --sidebar-item-active-bg: #1890ff;
  --sidebar-item-hover-bg: rgba(255, 255, 255, 0.08);
  --transition-duration: 0.2s;
}

/* 主容器 */
.sidebar {
  width: var(--sidebar-width);
  height: 100vh;
  background: var(--sidebar-bg);
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  transition: width var(--transition-duration) ease;
}

.sidebar.collapsed {
  width: var(--sidebar-collapsed-width);
}

/* Logo区域 */
.sidebar-logo {
  height: 56px;
  display: flex;
  align-items: center;
  padding: 0 16px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  cursor: pointer;
  flex-shrink: 0;
}

.logo-icon {
  width: 32px;
  height: 32px;
  flex-shrink: 0;
}

.logo-text {
  color: #fff;
  font-size: 18px;
  font-weight: 600;
  margin-left: 12px;
  white-space: nowrap;
}

/* 菜单容器 */
.sidebar-menu {
  flex: 1;
  overflow-y: auto;
  padding: 8px 0;
}

/* 菜单分组 */
.menu-group {
  margin-bottom: 4px;
}

.group-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.35);
  padding: 12px 24px 4px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* 分隔线 */
.menu-divider {
  height: 1px;
  margin: 8px 16px;
  background: rgba(255, 255, 255, 0.08);
}

/* 菜单项 */
.menu-item {
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 16px;
  margin: 2px 8px;
  border-radius: 6px;
  color: var(--sidebar-text);
  cursor: pointer;
  transition: all var(--transition-duration) ease;
  position: relative;
}

.menu-item:hover {
  background: var(--sidebar-item-hover-bg);
  color: var(--sidebar-text-active);
}

.menu-item.active {
  background: var(--sidebar-item-active-bg);
  color: var(--sidebar-text-active);
}

/* 菜单图标 */
.menu-icon {
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.icon-img {
  width: 18px;
  height: 18px;
  opacity: 0.65;
}

.menu-item:hover .icon-img,
.menu-item.active .icon-img {
  opacity: 1;
}

/* 菜单文字 */
.menu-text {
  font-size: 14px;
  margin-left: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 徽章 */
.menu-badge {
  position: absolute;
  right: 12px;
  min-width: 18px;
  height: 18px;
  line-height: 18px;
  text-align: center;
  font-size: 11px;
  font-weight: 600;
  background: #ff4d4f;
  color: #fff;
  border-radius: 9px;
  padding: 0 5px;
}

/* 折叠按钮 */
.sidebar-collapse {
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  cursor: pointer;
  flex-shrink: 0;
}

.collapse-icon {
  width: 16px;
  height: 16px;
  opacity: 0.65;
  transition: transform var(--transition-duration) ease;
}

.sidebar-collapse:hover .collapse-icon {
  opacity: 1;
}

.sidebar.collapsed .collapse-icon {
  transform: rotate(180deg);
}

/* 折叠状态下的样式调整 */
.sidebar.collapsed .menu-item {
  justify-content: center;
  padding: 0;
  margin: 2px 8px;
}

.sidebar.collapsed .menu-icon {
  margin: 0;
}

.sidebar.collapsed .logo-icon {
  margin: 0 auto;
}
